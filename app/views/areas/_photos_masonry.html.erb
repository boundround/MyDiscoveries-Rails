
  <div id="photos-masonry">
    <div class="grid-sizer"></div>
    <div class="item about">
      <div class="dude">
        <img src="<%= asset_path('dude-01.svg') %>" class="dude-image">
      </div>
      <div class="about-wrapper">
        <div class="about-hero">
          <% if @video %>
            <iframe class="hero-video" id="player1" src="//player.vimeo.com/video/<%= @video.vimeo_id %>?api=1&player_id=player1" width="630" height="354" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          <% else %>
            <% unless @area.photos.empty? %>
              <img class="hero-photo" src="<%= @area.photos.first.path_url(:large) %>" />
            <% end %>
          <% end %>
        </div>
        <div class="about-content">
          <h3>About <%= @area.display_name %></h3>
          <div id="area-content" class="mercury-region" data-type="editable" data-mercury="full">
            <p><%= raw @area.description %></p>
          </div>
        </div>
      </div>
    </div>
  <div class="vertical-space"></div>
  <% unless @area.photos.empty? %>
    <div class="item photo photo-label">
      <div class="icon"><%= image_tag asset_path 'washingmachine.png' %></div>
      <h3>Photos</h3>
    </div>
    <% @area.photos.each_with_index do |photo, index| %>
        <div class="item photo photo-card">
          <div class="photo-container">
            <img class="place-photo" src="<%= photo.path_url(:large) %>" />
            <div id="fun-fact-<%= index %>" class="fun-fact mercury-region" data-type="editable" data-mercury="full">
              <p><%= raw photo.fun_fact %></p>
            </div>
          </div>
        </div>

    <% end %>
  </div>
<% end %>
