<div id="photos-masonry">
  <% if @area.photos.length > 0 %>
    <div class="grid-sizer"></div>
    <% @area.photos.each_with_index do |photo, index| %>
        <div class="item">
          <img class="place-photo" src="<%= photo.path_url(:small) %>" srcset="<%= photo.path_url(:small) %> 450w, <%= photo.path_url(:medium) %> 640w, <%= photo.path_url(:large) %> 960w" />
        </div>
    <% end %>
  <% end %>
</div>
