<div class="form-group">
  <%= f.input :name, label: "Name", input_html: { class: 'form-control' } %><br>
</div>

<div class="form-group">
  <%= f.input :link, label: "Link", placeholder: 'e.g. http://mydiscoveries.com.au', input_html: { class: 'form-control' } %><br>
</div>

<div class="form-group">    
  <%= f.input :image, as: :file, label: false%>
</div>

<div class="form-group">    
  <%= f.input :description, as: :bootsy, label: "Description", input_html: { class: 'form-control', col: 50 } %><br>
</div>

<div class="form-group">
  <%= f.button :submit %>
  <%= link_to "Cancel", authors_path, {:class=>"btn"} %>
</div>