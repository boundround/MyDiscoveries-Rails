<div class="container">
  <h1>All competitions</h1>

  <table class="table table-striped" id="post-table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @competitions.each do |competition| %>
        <tr>
          <td><%= competition.title %></td>
          <td><%= competition.start_date %></td>
          <td><%= competition.end_date %></td>
          <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
          <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Competition', new_competition_path %>
</div>
