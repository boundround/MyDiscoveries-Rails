                      <img src="<%= famous_face.photo.url || asset_path('generic-grey.jpg') %>" class="img-responsive" / >
                      <p>
                        <strong><%= famous_face.name %></strong><br/>
                        <%= famous_face.description %>
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
