<style>
    .br_lightbox {
        background: url(<%= @country.hero_photo.url || asset_path('flags/' + @country.country_code.downcase + '.png') %>) no-repeat;
        padding: 20px 20px;
        color: #fff;
        background-position: center !important;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        background-size: cover !important;
    }

</style>

<div id='country-data' data-country-code=<%= @country.country_code %> data-capital-city=<%= @country.capital_city %>></div>
<div class="twenty-pix-top"></div>
<div>
  <div class="container br_country">
    <div class="br_lightbox row">
      <div class="col-md-12 ">
        <p class="br_time">
          <img class="country-flag" src="<%= asset_path('flags/' + @country.country_code.downcase + '.png') %>"/>
          <span class="hidden-xs">
            <% if @weather %>
            <span class="time">
              <% if @weather_time %>
                <i class="fa fa-clock-o"></i>&nbsp;
                <%= @weather_time %> GMT
              <% end %>
            </span>&nbsp;
            <span class="temperature">
              <% if @weather_temp %>
                <%= @weather_temp %>&deg;
              <% end %>
            </span>&nbsp;
            <span class="weather-description">
              <% if @weather_description %>
                <%= @weather_description %> in <%= @country.capital_city %>
              <% end %>
            </span>
            <% end %>
          </span>
        </p>
      </div>
      <div class="clearfix"></div>
      <div class="col-md-12">
        <h1 class="text-center">
          <%= @country.display_name %><br/>
          <span id="country-population">Population: </span>
        </h1>
      </div>
      <div class="br_time text-center">
        <span class="visible-xs">
          <% if @weather %>
            <i class="fa fa-clock-o"></i>&nbsp;
            <span class="time">
              <%= @weather_time %> GMT
            </span>-
            <span class="temperature">
              <%= @weather_temp %>&deg;
            </span>-
            <span class="weather-description">
              <%= @weather_description %><br>in <%= @country.capital_city %>
            </span>
            <% end %>
        </span>
      </div>
      <div class="col-md-12 br_links hidden-xs text-center">
        <a href="#info">Info</a>
        <a href="#famous-faces">Famous Faces</a>
        <a href="#">Favourite Places</a><!--
        <a href="#">Currency Convert</a>
        <a href="#">Key Phrases</a>
        <a href="#">Billboard top 5</a> -->
      </div>
      <div class="col-md-12 visible-xs text-center br_mob_links">
        <a href="#">See <%= @country.display_name %> info-bites &nbsp;<i class="fa fa-angle-right"></i> </a>
        <a href="#" class="hidden-xs"><i class="fa fa-angle-left"></i>Back to <%= @country.display_name %> </a>
      </div>
    </div>
    <a name="info"></a>
    <div class="row">
      <div class="col-sm-8 col-md-9 br_main_content">
        <div class="col-md-12 br_intro">
          <h2><%= @country.display_name %></h2>
          <p>
            <%= @country.description %>
          </p>
          <div class="clearfix"></div>
          <div class="owl-carousel" id="main-carousel">
            <% @videos_photos.each_with_index do |asset, index| %>
              <% if asset.class.to_s == "Video" %>
              <iframe class="hero-video carousel-item carousel-video" id="player1" src="//player.vimeo.com/video/<%= asset.vimeo_id %>?api=1&player_id=player1" width="273" frameborder="2" webkitallowfullscreen mozallowfullscreen allowfullscreen data-slide-number="<%= index %>"></iframe>
              <% elsif asset.class.to_s == "Photo" %>
                <div class="carousel-item">
                    <img src="<%= asset.path_url(:medium)%>" class="img-resposive carousel-country-photo" data-slide-number="<%= index %>" data-caption="<%= asset.caption ? asset.caption : '' %>" data-placeUrl="<%= asset.place ? place_path(asset.place) : asset.area ? area_path(asset.area) : '' %>" data-placeName="<%= asset.place ? asset.place.display_name : asset.area ? asset.area.display_name : '' %>">
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 ">
          <% @country.info_bits.active.each_with_index do |info_bit, index| %>
            <div class="br_native">
              <style>
                #info-bit-<%= index %> {
                  background: url(<%= info_bit.photo.url || asset_path('flags/' + @country.country_code.downcase + '.png') %>) no-repeat;
                }
              </style>
            <div class="br_tittle" id="info-bit-<%= index %>">
              <a href="#"><i class="fa fa-share-square-o"></i>
                 &nbsp;
                 Share
               </a>
               <h2 class="text-center hidden-xs"><%= info_bit.title %></h2>
               <h2 class="text-center visible-xs"><%= info_bit.title %></h2>
             </div>
             <div class="br_desc">
                <p>
                  <%= info_bit.description %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
          <% @country.fun_facts.active.each_with_index do |fun_fact, index| %>
            <style>
              #fun-fact-<%= index %> {
                background: transparent url(<%= fun_fact.hero_photo.url || asset_path('flags/' + @country.country_code.downcase + '.png') %>) no-repeat scroll 0% 0%;
              }
            </style>
            <div class="br_fun_fact hidden-xs hidden-sm">
              <div class="row">
                <div class="col-sm-3 col-md-3 col-lg-2">
                  <img src="<%= fun_fact.hero_photo.url || asset_path('flags/' + @country.country_code.downcase + '.png') %>" class="fun-fact-image">
                </div>
                <div class="col-sm-9 col-md-9 col-lg-10">
                  <a href="#"><i class="fa fa-share-square-o"></i> &nbsp; Share</a>
                  <h2>Now here’s a fun fact!</h2>
                  <p>
                    <%= raw fun_fact.content %>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-12 visible-xs visible-sm">
              <div class="row">
                <div class="br_fun_fact-mob" id="fun-fact-<%= index %>">
                  <div class="br_fun_fact col-xs-10 col-sm-10 pull-right">
                    <h2>Now here’s a fun fact!</h2>
                    <p>
                      <%= raw fun_fact.content %>
                    </p>
                    <a href="#"><i class="fa fa-share-square-o"></i> &nbsp; Share</a>
                  </div>
                  <div class="clearfix"></div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="clearfix"></div>
