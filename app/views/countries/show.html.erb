                  </div>
              </div> -->
              <% @photos.each_with_index do |photo, index| %>
                  <div>
                    <div class="embed-responsive embed-responsive-16by9">
                     <img src="<%= photo.path_url(:medium)%>" class="embed-responsive-item" data-slide-number="<%= index %>" data-caption="<%= photo.caption ? photo.caption : '' %>" data-placeUrl="<%= photo.place ? place_path(photo.place) : photo.area ? area_path(photo.area) : '' %>" data-placeName="<%= photo.place ? photo.place.display_name : photo.area ? photo.area.display_name : '' %>">
                     <div class="place-photo-credit"><%= photo.credit rescue "" %></div>
                    </div>
                       <div class="caption-photo-carousel">
                        <h3><%= link_to photo.caption, place_path(photo.place) rescue "" %></h3>
                      </div>
                  </div>
                 <% end %>
                </div>
            <!-- </div> -->
            </div>
        </div>

