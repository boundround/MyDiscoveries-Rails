        <div class="col-sm-4 br15_about_sidebar text-uppercase">
          <h3 class="text-center">Did you know ?</h3></br>
            <h3 class="br15_semi_font">Language(s)</h3>
            <h2 class="br15_light_font"><%= @country.official_language %></h2>

            <h3 class="br15_semi_font">Capital City</h3>
            <h2 class="br15_light_font"><a href="#"><%= @country.capital_city %></a></h2>
               <div class="col-xs-12 br_left br_pad br_light">
                    <% if area = Area.find_by(display_name: @country.capital_city) %>
                    <% if area.description && area.description.length < 85 %>
                    <%= area.description %><br>
                    <% elsif area.description %>
                    <%= area.description[0..80] %>...<br>
                    <% else %>
                    <%= @country.capital_city_description if @country.capital_city_description %>
                    <% end %>
                    <a href="<%= area_path(area)%>">Visit on Bound Round</a>
                    <% end %>
                  </div>
            <h3 class="br15_semi_font">Tallest Mountain</h3>
            <h2 class="br15_light_font"><%= @country.tallest_mountain %></h2>

            <h3 class="br15_semi_font">Longest River</h3>
            <h2 class="br15_light_font"><%= @country.longest_river %></h2>
        </div>

        <div class="clearfix"></div>
         <!-- Videos -->
        <div class="br15_videos  br15_bor_bot br15_photos_cont container-fluid">
            <a href="#" class="btn btn-default new-btn-orange a-photo br15_Title_See_All">Videos</a>
            <div class="row">
            <!-- <div class="col-lg-12"> -->
                <div id="br15_owl_video" class="owl-carousel">
              <!--  <div>
                  <div class="embed-responsive embed-responsive-16by9">
                      <img class="embed-responsive-item" src="/assets/frame.jpg">
                  </div>
              </div> -->
              <% @videos.each_with_index do |video, index| %>
                <div>
                  <div class="embed-responsive embed-responsive-16by9 for-video-modal"
                              data-src=<% if !video.vimeo_id.blank? %>
                                         <%= "//player.vimeo.com/video/#{video.vimeo_id}" %>
                                        <% else %>
                                          <%= "https://www.youtube.com/embed/#{video.youtube_id}"%>
                                        <% end %>>
                    <img for="thumb-video" id="video-<%= video.vimeo_id || video.youtube_id %>" src="<%= video.vimeo_thumbnail %>" data-thumb="<%= !video.vimeo_id.blank? ? 'vimeo' : 'youtube' %>">
                    <h4 class="video-title"><%= video.title %></h4>
                    <div class="div-modal-video"></div>
                    <div class="bg-play">
                      <i class="fa fa-play play-icon"></i>
                    </div>
                  </div>
                </div>
              <% end %>
                </div>
            </div>
        </div>
        <div class="br15_map br15_collapse">
            <a href="#" class="btn btn-default new-btn-orange btn-map br15_pad_bot_5  br15_features_btn  br15_Title_See_All">map</a>
            <div id="br15_map" class="map-country">

            </div>
        </div>


        <!-- Photos -->
        <div class="br15_videos  br15_bor_bot br15_photos_cont container-fluid">
            <a href="#" class="btn btn-default new-btn-orange a-photo br15_Title_See_All">Photos</a>
            <div class="row">
            <!-- <div class="col-lg-12"> -->
                <div id="br15_owl_photos" class="owl-carousel">
              <!--  <div>
                  <div class="embed-responsive embed-responsive-16by9">
