<div class="modal-dialog modal-dialog--margin-top" role="document">
  <div class="modal-content modal-content--container">
    <div class="modal-content__header text-center">
      <div class="text-center img-logo-area">
        <img src="/assets/mydiscoveries_icon/i/logo-short.svg" class="modal-content__logo-short">
      </div>
      <p class="modal-content__sing">Set your password</p>
  </div>

  <div class="modal-content__body">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-inputs">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password, "Password", class: "modal-content__title control-label" %>
              <%= f.input :password, required: true, label:false, autofocus: true, :input_html => { class: "modal-content__input form-control", placeholder: "Password" }%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm your password", class: "modal-content__title control-label" %>
              <%= f.input :password_confirmation, required: true, label:false, autofocus: true, :input_html => { class: "modal-content__input form-control", placeholder: "Confirm your password" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="modal-content__btn text-center">
           <%= f.button :submit, "Submit", class: "modal-content__btn-access" %>
    <% end %>
    </div>
  </div>
  </div>
</div>
</div>
