<div class="br_sign_style_modal" id="forgot_password" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog--margin-top" role="document">
        <div class="modal-content modal-content--container">
            <div class="modal-content__header text-center">
                <div class="text-center img-logo-area">
                  <img src="/assets/mydiscoveries_icon/i/logo-short.svg" class="modal-content__logo-short">
                </div>
               <p class="modal-content__sing">Forgot Your Password</p>
            </div>
            <div class="modal-content__body">
              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= f.error_notification %>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <%= f.label :email, "Email address", class: "modal-content__title control-label" %>
                        <%= f.input :email, required: true, label:false, autofocus: true, :input_html => {class: "modal-content__input form-control", placeholder: "Email" }%>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12">
                      <div class="modal-content__btn text-center">
                        <%= f.button :submit, "Send me password reset instructions", class: "modal-content__btn-access" %>

                        <!-- copy on shared link -->
                        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                          <p class="modal-content__text-divider">Need a MyDiscoveries account ?</p>
                          <%= link_to "Sign up here!", new_registration_path(resource_name), class: "modal-content__btn-sign-up" %>

                          <p class="modal-content__text-divider">OR</p>
                        <% end -%>

                        <!-- copy on shared link -->
                        <%- if devise_mapping.omniauthable? %>
                          <%- resource_class.omniauth_providers.each do |provider| %>
                            <%# if provider.to_s == "facebook" %>
                              <!-- <a href="<%#= omniauth_authorize_path(resource_name, provider) %>" class="modal-content__btn-facebook">facebook</a> -->
                            <%#end %>
                            <% if provider.to_s == "facebook" %>
                              <div class="half-left">
                                <a href="<%= omniauth_authorize_path(resource_name, provider) %>" role="button" class="btn btn-primary btn-block button btn-radius fontbig-signin btn-facebook mrg0"><i class="fa fa-<%= provider.to_s %>"></i> Facebook</button>
                                </a>
                              </div>
                            <% elsif provider.to_s == "google_oauth2" %>
                              <div class="half-right">
                                <a href="<%= omniauth_authorize_path(resource_name, provider) %>" type="button" class="btn button btn-danger btn-block btn-google-plus btn-radius fontbig-signin" role="button"><i class="fa fa-google"></i> Google+
                                </a>
                              </div>
                            <% end %>
                          <% end -%>
                        <% end -%>

                      </div>
                    </div>
                  </div>
                <% end %> <!--/simple form -->
            </div><!--/modal body -->

            <div class="modal-content__footer text-center">
              <div class="row">
                <div class="col-xs-12 col-sm-12" align="center">
                  <p class="modal-content__footer-text">By creating an account, you're agreeing with our
                  <br><a href="/terms-conditions" class="modal-content__footer-terms">Terms and Conditions</a> and <a href="privacy" class="modal-content__footer-terms">Privacy Statement</a>
                  </p>
                </div>
              </div>
            </div>
        </div><!--modal content -->
    </div>
</div><!--/modal-->