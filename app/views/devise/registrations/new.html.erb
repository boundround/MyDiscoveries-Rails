<a href="<%= root_path %>"><input type="image" src="<%= asset_path("home-button-blue.png") %>" class="globe-home"></a>
<table class="passport sign-up">
  <tr><td colspan="2"><%= image_tag 'plane.png' , class: 'passport-plane' %><h2>My Passport</h2></td></tr>
  <%= simple_form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <tr>
      <td rowspan="3" class="left-passport">
        <p>Upload A Photo</p><br>
        <%= f.input :avatar, as: :file, label: false %>
      </td>
      <td>
        <%= f.input :name, label: false, placeholder: 'Your name', required: true, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>
        <div class="form-group passport-form">
          <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year,
                              order: [:month, :day, :year] %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.input :email, label: false, placeholder: 'Your Email Address', required: true %>
      </td>
    </tr>
    <tr>
      <td rowspan="2">
        <%= image_tag 'passport_stamp.png', class: 'passport-stamp' %>
      </td>
      <td><%= f.input :password_confirmation, required: true, label: false, placeholder: 'Repeat password' %></td>
    </tr>
    <tr>
      <td><%= f.input :password, required: true, label: false, placeholder: 'Pick a password' %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <% if provider.to_s == 'instagram' %>
            <p><a href="<%= omniauth_authorize_path(resource_name, provider) %>"><img class="facebook-sign-in" src="/assets/images/<%= provider %>_sign_in.png"></a></p>
            <% end %>
          <% end -%>
        <% end -%>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="user-signature">
        Signed:&nbsp;&nbsp;&nbsp; <%= f.submit 'Create Account' %>
      </td>
    </tr>
</table>
<div class="actions">

</div>
<% end %>
<script>
  $(document).ready(function(){
    $("input.datepicker").each(function(input) {
      $(this).datepicker({
        dateFormat: "yy-mm-dd",
        altField: $(this).next()
      });
    });
  });
  </script>
