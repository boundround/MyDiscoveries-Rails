<div class="br_sign_style_modal" id="signup_modal" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= simple_form_for(@user) do |f| %>
        <div class="modal-header">
          <div class="text-center img-logo-area">
            <img src="/assets/mydiscoveries_icon/i/logo-short.svg" width="100">
          </div>
           <%= link_to "  ",  root_path, class: "close cs-close close-signup"  %>
        </div>
        <div class="modal-body sign-in-pad">
        <div class="row">
          <div>
            <%= f.input_field :email, required: true, autofocus: true, placeholder: "Email", class: "form-control" %>
            <span class="error-fields"><%= (@user.errors[:email].present? ? '* Email ' : '') + @user.errors[:email].join(", ") %></span>
          </div><br>
        </div>
        <div class="row">
          <div>
            <%= f.password_field :password, required: true, placeholder: "Password", class: "form-control"%>
            <span class="error-fields"><%= (@user.errors[:password].present? ? '* Password ' : '') + @user.errors[:password].join(", ") %></span>
          </div><br>
          <div>
            <%= f.password_field :password_confirmation, required: true, placeholder: "Password Confirmation",class: "form-control" %>
            <span class="error-fields"><%= (@user.errors[:password_confirmation].present? ? '* ' : '') + @user.errors[:password_confirmation].first.to_s %></span>
          </div><br>
        </div>
        <div class="row">
          <div>
            <%= f.input :promo_code, label: false, placeholder: "Promo Code (optional)", wrapper_html: { class: "form-group"}, input_html: { class: "form-control" } %>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <%= f.button :submit, "Join", :class=>'btn btn-default border-rgba btn-block btn-radius btn-height fontbig-button brw-blue' %>
          </div>
        </div>
        <div class="row">
          <hr>
        </div>

        <% end %> <!--/simple form -->
                  
        <div class="row">
          <p>Or sign up with...</p>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <% if provider.to_s == "facebook" %>
                <div class="half-left">
                  <a href="<%= omniauth_authorize_path(resource_name, provider) %>" role="button" class="btn btn-primary btn-block button btn-radius fontbig-signin btn-facebook mrg0"><i class="fa fa-<%= provider.to_s %>"></i> Facebook</button>
                  </a>
                </div>
              <% elsif provider.to_s == "google_oauth2" %>
                <div class="half-right">
                  <a href="<%= omniauth_authorize_path(resource_name, provider) %>" type="button" class="btn button btn-danger btn-block btn-google-plus btn-radius fontbig-signin" role="button"><i class="fa fa-google"></i> Google+
                  </a>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div><!--/modal body -->

      <div class="modal-footer">
        <div class="row">
          <div class="col-xs-12">
            <div class="left">
              <p class="text-center">We're committed to protecting your privacy. By proceeding, you agree to our <%= link_to "Privacy Policy", pages_privacy_path, target: "_blank" %> and <%= link_to "Terms and Conditions", pages_terms_path, target: "_blank" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><!--/modal-->
