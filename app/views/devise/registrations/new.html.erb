<div class="br_sign_style_modal" id="signup_modal" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-dialog--margin-top" role="document">
    <div class="modal-content modal-content--container">
        <div class="modal-header">
          <div class="text-center img-logo-area">
            <img src="/assets/mydiscoveries_icon/i/logo-short.svg" class="modal-content__logo-short">
            <p class="modal-content__sing">Sign Up</p>
          </div>
        </div>

        <div class="modal-content__body">
        <%= simple_form_for(@user) do |f| %>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :email, "Email address", class: "modal-content__title control-label" %>
              <%= f.input :email, required: true, label:false, autofocus: true, placeholder: "Email", :input_html => { class: "modal-content__input form-control" } %>
            <span class="error-fields"><%= (@user.errors[:email].present? ? '* Email ' : '') + @user.errors[:email].join(", ") %></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <%= f.label :password, "Password", class: "modal-content__title control-label" %><br>
              <%= f.password_field :password, required: true, placeholder: "Password", class: "modal-content__input form-control" %>
              <span class="error-fields"><%= (@user.errors[:password].present? ? '* Password ' : '') + @user.errors[:password].join(", ") %></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <%= f.label :password_confirmation, "Password Confirmation", class: "modal-content__title control-label" %><br>
              <%= f.password_field :password_confirmation, required: true, placeholder: "Password Confirmation",class: "modal-content__input form-control" %>
              <span class="error-fields"><%= (@user.errors[:password_confirmation].present? ? '* ' : '') + @user.errors[:password_confirmation].first.to_s %></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="modal-content__btn text-center">
              <%= f.button :submit, "Join", :class=>'modal-content__btn-access' %>
        <% end %> <!--/simple form -->
                  
          <p class="modal-content__text-divider">Or sign up with...</p>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <% if provider.to_s == "facebook" %>
                <div class="half-left">
                  <a href="<%= omniauth_authorize_path(resource_name, provider) %>" role="button" class="btn btn-primary btn-block button btn-radius fontbig-signin btn-facebook mrg0"><i class="fa fa-<%= provider.to_s %>"></i> Facebook</button>
                  </a>
                </div>
              <% elsif provider.to_s == "google_oauth2" %>
                <div class="half-right">
                  <a href="<%= omniauth_authorize_path(resource_name, provider) %>" type="button" class="btn button btn-danger btn-block btn-google-plus btn-radius fontbig-signin" role="button"><i class="fa fa-google"></i> Google+
                  </a>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div><!--/modal body -->
      </div>

      <div class="modal-content__footer text-center">
        <div class="row">
          <div class="col-xs-12 col-sm-12" align="center">
          <p class="modal-content__footer-text modal-content__footer-text--up">
            <p class="modal-content__footer-text">By creating an account, you're agreeing with our
                <br><a href="/terms-conditions" class="modal-content__footer-terms">Terms and Conditions</a> and <a href="privacy" class="modal-content__footer-terms">Privacy Statement</a>
            </p>
        </div>
      </div>
    </div>
    </div>
  </div>
</div><!--/modal-->
