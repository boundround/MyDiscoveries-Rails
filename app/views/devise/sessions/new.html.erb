<div class="br_sign_style_modal signin" id="signInModal">
            <div class="modal-dialog cs-modal-dialog" role="document">
                <div class="modal-content">
                        <div class="modal-header cs-header">
                            <div class="text-center img-logo-area">
                              <img src="/assets/logoNew.png">
                              <h1 class="text-center sign-in">Sign In and Explore!</h1>
                            </div>
                            <%= link_to "  ",  root_path, class: "close cs-close close-signin"  %>
                        </div>
                        <div class="modal-body">
                           <div class="row">
                           <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                                <div class="col-sm-12">
                                    <%= f.input_field :email, required: false, autofocus: true, placeholder: "Email", class: "form-control" %>
                                </div>

                                <div class="col-sm-12">
                                    <%= f.password_field :password, required: false, placeholder: "Password", class: "form-control" %>
                                </div>

                                <div class="col-sm-6 text-left div-forgot">
                                    <!--<a href="#" class="forgot-password">FORGOT PASSWORD</a>-->
                                    <%= link_to "FORGOT PASSWORD", new_user_password_path, class: "forgot-password"  %>
                                </div>
                                <!-- <div class="col-sm-6 text-right div-forgot"> -->
                                    <!--<a href="#" class="forgot-password">FORGOT PASSWORD</a>-->
                                    <%#= link_to "FORGOT USERNAME", users_username_new_path, class: "forgot-password"  %>
                                <!-- </div> -->
                                <div class="col-sm-12">
                                        <%= f.button :submit, "Sign in", :class=>'btn btn-block btn-warning btn-orange' %>
                                </div>
                            <% end %>
                                <div class="col-sm-12">
                                    <%- if devise_mapping.omniauthable? %>
                                      <%- resource_class.omniauth_providers.each do |provider| %>
                                        <% if provider.to_s == "facebook" %>
                                            <div class="half-left">
                                              <a href="<%= omniauth_authorize_path(resource_name, provider) %>" role="button" class="btn btn-primary btn-block button btn-radius fontbig-signin btn-facebook mrg0"><i class="fa fa-<%= provider.to_s %>"></i> Facebook</button>
                                              </a>
                                            </div>
                                          <% elsif provider.to_s == "google_oauth2" %>
                                            <div class="half-right">
                                              <a href="<%= omniauth_authorize_path(resource_name, provider) %>" type="button" class="btn button btn-danger btn-block btn-google-plus btn-radius fontbig-signin" role="button"><i class="fa fa-google"></i> Google+
                                              </a>
                                            </div>
                                          <% end %>
                                      <% end -%>
                                    <% end -%>
                                </div>
                                <div class="col-sm-12">
                                    <h4 class="text-center or">OR</h4>
                                </div>
                                <div class="col-sm-12">
                                    <a type="submit" href="<%= new_user_registration_path %>" class="btn btn-block btn-warning btn-orange">CREATE AN ACCOUNT</a>
                                </div>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <div class="row">
                            <div class="col-sm-12">
                              <div class="left">
                                <p class="text-center">We're committed to protecting your privacy. By proceeding, you agree to our <%= link_to "Privacy Policy", pages_privacy_path, target: "_blank" %> and <%= link_to "Terms and Conditions", pages_terms_path, target: "_blank" %></p>
                              </div>
                            </div>
                          </div>
                        </div>
                </div>
            </div>
        </div><!--/modal-->
