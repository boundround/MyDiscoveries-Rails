<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="modal-content__text-divider">Need a MyDiscoveries account?</p>
  <%= link_to "Sign up here!", new_registration_path(resource_name), class: "modal-content__btn-sign-up" %>
  <p class="modal-content__text-divider">OR</p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: "modal-content__btn-sign-up" %></p><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "modal-content__btn-sign-up" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "modal-content__btn-sign-up" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider.to_s == "facebook" %>
      <div class="half-left">
        <a href="<%= omniauth_authorize_path(resource_name, provider) %>">
          <button class="btn btn-primary btn-block button-style btn-radius fontbig-signin btn-facebook mrg0"><i class="fa fa-<%= provider.to_s %>"></i> Facebook</button>
        </a>
      </div>
    <% elsif provider.to_s == "google_oauth2" %>
      <div class="half-right">
        <a href="<%= omniauth_authorize_path(resource_name, provider) %>">
          <button class="btn btn-danger btn-block button-style btn-google-plus btn-radius fontbig-signin"><i class="fa fa-google"></i> Google+</button>
        </a>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
</div>

<div class="modal-content__footer text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-12" align="center">
      <p class="modal-content__footer-text">By creating an account, you're agreeing with our
      <br><a href="/terms-conditions" class="modal-content__footer-terms">Terms and Conditions</a> and <a href="privacy" class="modal-content__footer-terms">Privacy Statement</a>
      </p>
    </div>
  </div>
</div>
