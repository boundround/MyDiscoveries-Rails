<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="sign-up">Need a Bound Round account? <br><%= link_to "Sign up here!", new_registration_path(resource_name) %></p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p><%= link_to "Forgot your password?", new_password_path(resource_name) %></p><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider.to_s == "facebook" %>
      <div class="col-xs-6 col-sm-6">
        <a href="<%= omniauth_authorize_path(resource_name, provider) %>">
          <button class="btn btn-primary btn-block button-style btn-radius fontbig-signin btn-facebook mrg0"><i class="fa fa-<%= provider.to_s %>"></i> Facebook</button>
        </a>
      </div>
    <% elsif provider.to_s == "google_oauth2" %>
      <div class="col-xs-6 col-sm-6">
        <a href="<%= omniauth_authorize_path(resource_name, provider) %>">
          <button class="btn btn-danger btn-block button-style btn-google-plus btn-radius fontbig-signin"><i class="fa fa-google"></i> Google+</button>
        </a>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="modal-footer sign-in-footer">
  We're committed to protecting your privacy.<br>
  By proceeding, you agree to our <%= link_to "Privacy Policy", pages_privacy_path, target: "_blank" %> and <%= link_to "Terms and Conditions", pages_terms_path, target: "_blank" %>.
</div>
