<div class="photo-container">
  <h2>Add New Special</h2>
  <%= simple_form_for [@place, Discount.new] do |f| %>
    <div class="form-group">
      <%= f.input :description, as: :bootsy, label: false, editor_options: {lists: false}, input_html: { class: 'form-control'}  %>
      <%= f.input :place_id, as: :hidden, input_html: {value: @place.id } %>
    </div>
    <div class="form-group">
      <%= f.button :submit%>
    </div>
</div>
  <% end %>
