<div class="photo-container">
  <h2>Add New Fun Fact</h2>
  <% if @place %>
    <%= simple_form_for [@place, FunFact.new] do |f| %>
      <div class="form-group">
        <%= f.input :text, as: :bootsy, label: false, editor_options: {lists: false}, input_html: { class: 'form-control'}  %>
        <%= f.input :place_id, as: :hidden, input_html: {value: @place.id } %>
      </div>
      <div class="form-group">
        <%= f.button :submit%>
      </div>
    <% end %>
  <% elsif @area %>
  <%= simple_form_for [@area, FunFact.new] do |f| %>
      <div class="form-group">
        <%= f.input :text, as: :bootsy, label: false, editor_options: {lists: false}, input_html: { class: 'form-control'}  %>
        <%= f.input :area_id, as: :hidden, input_html: {value: @area.id } %>
      </div>
      <div class="form-group">
        <%= f.button :submit%>
      </div>
    <% end %>
  <% end %>
</div>
