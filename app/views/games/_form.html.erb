<div class="photo-container">
  <h2>Add New Game</h2>
  <%= simple_form_for Game.new do |f| %>
    <div class="form-group">
      <%= f.input :url, label: "Enter Game URL", input_html: { class: 'form-control'}  %>
      <% if @place %>
        <%= f.input :place_id, as: :hidden, input_html: {value: @place.id } %>
      <% elsif @area %>
        <%= f.input :area_id, as: :hidden, input_html: {value: @area.id } %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.input :priority, collection: 1..10, input_html: { class: 'form-control'} %><br />
    </div>
    <div class="form-group published-radio">
      <%= f.input :game_type, as: :radio_buttons, collection: ["jigsaw puzzle", "slider", "word search"], input_html: { class: 'form-control'} %><br />
    </div>
    <div class="form-group">
      <%= f.button :submit%>
    </div>
</div>
  <% end %>
