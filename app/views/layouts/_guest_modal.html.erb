<div id="guestModal" class="modal fade in" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-dialog--margin-top" role="document">

    <!-- start sign in form  -->

    <div class="modal-content modal-content--container modal-guest-sign-in-content">
      <div class="modal-content__header text-center">
        <img src="/assets/mydiscoveries_icon/i/logo-short.svg" class="modal-content__logo-short" alt="logo-short">
        <p class="modal-content__sing">sign in</p>
      </div>
      <div class="modal-content__body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'guest-sign-in-form' }) do |f| %>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :email, "Email address", class: "modal-content__title control-label" %>
                <%= f.input_field :email, required: false, autofocus: true, placeholder: "Email", class: "modal-content__input form-control" %>
               </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :password, "Password", class: "modal-content__title control-label" %>
                <%= f.password_field :password, required: false, placeholder: "Password", class: "modal-content__input form-control" %>
              </div>
           </div>
         </div>
         <div class="row">
            <div class="col-sm-12">
              <div class="modal-content__btn text-center">
                <%= f.button :submit, "access my account", class: 'modal-content__btn-access js-submit-guest-sign-in-form' %>
                <p class="modal-content__text-divider">or</p>
                <%= link_to 'Join MyDiscoveries', '#', class: 'modal-content__btn-access js-show-sign-up' %>
                <p class="modal-content__text-divider">or</p>
                <%= link_to 'Checkout As Guest', '#', class: 'modal-content__btn-access js-submit-current-offer' %>
              </div>
            </div>
         </div>
        <% end %>
        <div class="modal-content__footer text-center">
        </div>
      </div>
    </div>
  <!-- end sign in form  -->

  <!-- start sign up form  -->
  <div class="modal-content modal-content--container modal-guest-sign-up-content">
    <%= simple_form_for(User.new, html: { class: 'guest-sign-up-form' }) do |f| %>
    <div class="modal-header">
      <div class="modal-content__header text-center">
        <img src="/assets/mydiscoveries_icon/i/logo-short.svg" class="modal-content__logo-short" alt="logo-short">
        <p class="modal-content__sing">join mydiscoveries</p>
      </div>
    </div>

    <div class="modal-content__body">
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :email, "Email address", class: "modal-content__title control-label" %>
            <%= f.input_field :email, required: true, autofocus: true, placeholder: "Email", class: "modal-content__input form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :password, "Password", class: "modal-content__title control-label" %>
            <%= f.password_field :password, required: true, placeholder: "Password", class: "modal-content__input form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation", class: "modal-content__title control-label" %>
            <%= f.password_field :password_confirmation, required: true, placeholder: "Password Confirmation", class: "modal-content__input form-control" %>
          </div>
        </div>
      </div>

       <div class="row">
          <div class="col-sm-12">
            <div class="modal-content__btn text-center">
              <%= f.button :submit, "Join", class: 'modal-content__btn-access js-submit-guest-sign-up-form' %>
              <p class="modal-content__text-divider">or</p>
              <%= link_to 'Access My Account', '#', class: 'modal-content__btn-access js-show-sign-in' %>
              <p class="modal-content__text-divider">or</p>
              <%= link_to 'Checkout As Guest', '#', class: 'modal-content__btn-access js-submit-current-offer' %>
            </div>
          </div>
       </div>
      <% end %>
      <div class="modal-content__footer text-center">
      </div>
    </div>
  </div>
<!-- end sign up form  -->

  </div>
</div>
