<!-- ## MODAL LOGIN ACCOUNT -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-margin-top">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal-orange" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" align="center">Login to Bound Round</h4>
      </div>
      <div class="modal-body">

	        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		       <div class="col-sm-12">
		        	<div class="form-group">
			                <%= f.input_field :username, required: false, autofocus: true, placeholder: "Username", class: "form-control" %>
			        </div>
		        </div>

		        <div class="col-sm-12">
		        	<div class="form-group">
			                <%= f.password_field :password, required: false, placeholder: "Password", class: "form-control" %>
			        </div>
			     </div>
	            <div class="col-sm-6 text-left div-forgot">
	                <!--<a href="#" class="forgot-password">FORGOT PASSWORD</a>-->
	                <%= link_to "FORGOT PASSWORD", new_user_password_path, class: "forgot-password"  %>
	            </div>

	            <div class="col-sm-6 text-right div-forgot">
	                <!--<a href="#" class="forgot-password">FORGOT PASSWORD</a>-->
	                <%= link_to "FORGOT USERNAME", users_username_new_path, class: "forgot-password"  %>
	            </div>
	             <!-- <p align="center" class="btm15"><a href="#" class="black underline">Forgot password</a></p> -->
	             <div class="col-sm-12">
					<div class="fomr-group">
	             		<%= f.button :submit, "Sign in", :class=>'btn btn-default btn-block btn-radius btn-height fontbig-button pink' %>
	             	</div>
	             </div>
			         <!-- <p><button class="btn btn-default btn-block btn-radius btn-height fontbig-button pink">Sign in</button></p> -->
		        <!-- </div> -->
	        <% end %>
			         <p align="center" class="btm15 top15 grey">or sign in with...</p>
