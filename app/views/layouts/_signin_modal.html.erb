<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-margin-top">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal modal-blue" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" align="center">Login to Bound Round</h4>
      </div>
      <div class="modal-body">

	        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
		        <div class="col-sm-12">
		        	<div class="form-group">
  			         <%= f.input_field :email, required: false, autofocus: true, placeholder: "Email", class: "form-control" %>
  			       </div>
		        </div>
          </div>

          <div class="row">
		        <div class="col-sm-12">
		        	<div class="form-group">
			           <%= f.password_field :password, required: false, placeholder: "Password", class: "form-control" %>
			        </div>
			     </div>
         </div>
         <div class="row">
           <div class="col-sm-6 text-center div-forgot">
	           <!--<a href="#" class="forgot-password">FORGOT PASSWORD</a>-->
	           <%= link_to "Forgot password", new_user_password_path, class: "forgot-password brw-blue" %>
	         </div>
         </div>

	            <!-- <div class="col-sm-6 text-right div-forgot"> -->
	                <!--<a href="#" class="forgot-password">FORGOT PASSWORD</a>-->
	                <%#= link_to "FORGOT USERNAME", users_username_new_path, class: "forgot-password"  %>
	            <!-- </div> -->
	             <!-- <p align="center" class="btm15"><a href="#" class="black underline">Forgot password</a></p> -->
	        <div class="row">
            <div class="col-sm-12">
	   				  <div class="form-group">
	             	<%= f.button :submit, "Sign in", :class=>'btn btn-default border-rgba btn-block btn-radius btn-height fontbig-button brw-blue' %>
	           </div>
	         </div>
        </div>
			     <!-- <p><button class="btn btn-default btn-block btn-radius btn-height fontbig-button pink">Sign in</button></p> -->
		      <!-- </div> -->
	        <% end %>

