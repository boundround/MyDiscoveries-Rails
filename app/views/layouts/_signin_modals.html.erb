<% if !user_signed_in? %>
  <div class="modal fade" id="navModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-content small-modal" style="/*background-repeat: no-repeat; background-size: 100% 100%; background-image: url(<%= asset_path('br_logo_new.png') %>*/">
			<img src="<%= asset_path('br_logo_new.png') %>" style="margin:auto; position:absolute; top:0; left:0; right:0; bottom:0; opacity:0.2;">
			<div class="modal-header">
	      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      <h2 class="modal-title">Sign In and Explore!</h2>
	    </div>
			<div class="modal-body">
				<!--h5>Already A Bound Round User?</h5-->
				<div id="icon-wrapper">
				  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				    <div class="form-inputs">
				      <%= f.input :email, required: false, autofocus: true %><br>
				      <%= f.input :password, required: false %><br>
				      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>
				    </div>

				    <div class="form-actions">
				      <p><%= f.button :submit, "Sign in" %></p>
				    </div>
				  <% end %>
					<h5>Need To Create An Account?</h5>
					<a href="<%= new_user_registration_path %>">
						<button class="btn blue-button">
							Sign Up
						</button>
					</a>
				</div>
			</div>
		</div>
	</div>
<% end %>

