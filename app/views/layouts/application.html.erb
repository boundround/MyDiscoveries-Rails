<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>

  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Signika:400,300,600,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width,
                                     initial-scale=0.75,
                                     maximum-scale=0.75,
                                     user-scalable=no">
  <%= render "/layouts/ga" %>
</head>
<body>
  <% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> fade in">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= message %>
  </div>
<% end %>

  <% if current_user.try(:admin) %>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="collapse navbar-collapse">
          <ul class='nav navbar-nav'>
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'All Areas', areas_path %></li>
            <li><%= link_to 'New Area', new_area_path %></li>
            <li><%= link_to 'All Places', places_path %></li>
            <li><%= link_to 'New Place', new_place_path %></li>
            <li><%= link_to 'Show/Edit Users', users_path %></li>
            <li><%= link_to 'Rails Admin', rails_admin_path %></li>
            <% if user_signed_in? %>
              <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav pull-right">

          </ul>
        </div>
      </div>
    </nav>
  <% end %>

  <nav class="navbar navbar-default inline-list" role="navigation">
    <ul class="nav navbar-nav">
      <li><a href="/map_only"><i class="fa fa-globe fa-2x centered-icon"></i><br>Map</a></li>
      <% if @place || @area %>
        <li><a onclick="goToInfoSlide()"><i class="fa fa-question-circle fa-2x centered-icon"></i><br>About</a></li>
        <li><a onclick="goToPlacesSlide()"><i class="fa fa-th-large fa-2x centered-icon"></i><br>Places</a></li>
      <% else %>
        <li><a href="/map"><i class="fa fa-th-large fa-2x centered-icon"></i><br>Search</a></li>
      <% end %>
      <li><a href="/videos"><i class="fa fa-youtube-play fa-2x centered-icon"></i><br>Videos</a></li>
      <li><a href="/games"><i class="fa fa-puzzle-piece fa-2x centered-icon"></i><br>Games</a></li>
      <!-- <li><a href="#"><i class="fa fa-user fa-2x centered-icon"></i><br>My Stuff</a></li> -->
    </ul>
  </nav>

  <%= javascript_include_tag 'mapbox' %>
  <%= javascript_include_tag 'application' %>
  <div>
    <%= yield %>
  </div>
  <script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
  <script src="//cdn.jsdelivr.net/isotope/2.0.0/isotope.pkgd.min.js"></script>
  <script src="//cdn.jsdelivr.net/imagesloaded/3.1.6/imagesloaded.min.js"></script>
  <script src="http://a.vimeocdn.com/js/froogaloop2.min.js"></script>
  <%= javascript_include_tag 'cards' %>
</body>
</html>
