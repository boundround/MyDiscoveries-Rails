<!DOCTYPE html>
<html>
<% if not @placeprograms %>
	<head>
	  <title><%= full_title(yield(:title)) %></title>
	  <%= stylesheet_link_tag( 'application', media: 'all') %>
		<!--%= @set_css ? stylesheet_link_tag(@set_css) : stylesheet_link_tag("br/custom.css") %-->
	  <%= csrf_meta_tags %>

	  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
	  <link href='//fonts.googleapis.com/css?family=Signika:300,400,600,700' rel='stylesheet' type='text/css'>
	  <link href='//fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css'>
 
	 <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	 <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	 <!--[if lt IE 9]>
	   <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	   <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	 <![endif]-->
 
	  <meta name="viewport" content="width=device-width,
	                                     initial-scale=0.75,
	                                     maximum-scale=0.75,
	                                     user-scalable=no">
	  <%= raw open_graph_image %>
	  <%= render "/layouts/ga" %>
	</head>
	<body class="<%= @set_body_class ? @set_body_class : 'homepage' %>">
	  <% if current_user.try(:admin) %>
	    <% flash.each do |type, message| %>
	    <div class="alert <%= bootstrap_class_for(type) %> fade in">
	      <button class="close" data-dismiss="alert">Ã—</button>
	      <%= message %>
	    </div>
	  <% end %>
	<% end %>

	  <% if current_user.try(:admin) %>
	    <nav class="navbar navbar-default" role="navigation">
	      <div class="container-fluid">
	        <div class="collapse navbar-collapse">
	          <ul class='nav navbar-nav'>
	            <li><%= link_to 'Home', root_path %></li>
	            <li><%= link_to 'All Areas', areas_path %></li>
	            <li><%= link_to 'New Area', new_area_path %></li>
	            <li><%= link_to 'All Places', places_path %></li>
	            <li><%= link_to 'New Place', new_place_path %></li>
	            <li><%= link_to 'All Programs', programs_path %></li>
	            <li><%= link_to 'New Program', new_program_path %></li>
	            <li><%= link_to 'Edit Place Tags', "/places/tags" %></li>
	            <li><%= link_to 'Edit Program Tags', "/programs/tags" %></li>
	            <li><%= link_to 'Show/Edit Users', users_path %></li>
	            <li><%= link_to 'Rails Admin', rails_admin_path %></li>
	            <% if user_signed_in? %>
	              <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
	            <% end %>
	          </ul>

	          <ul class="nav navbar-nav pull-right">

	          </ul>
	        </div>
	      </div>
	    </nav>
	  <% end %>
	  <% if !@no_mobile_nav %>
	    <nav class="navbar navbar-default inline-list" role="navigation">
	      <ul class="nav navbar-nav">
	        <% if @place || @area %>
	          <li><a href="/map_only"><i class="fa fa-globe fa-2x centered-icon home-item"></i><br>Home</a></li>
	          <li><a onclick="goToInfoSlide()"><i class="fa fa-question-circle fa-2x centered-icon about-item"></i><br>About</a></li>
	          <li><a onclick="goToPlacesSlide()"><i class="fa fa-th-large fa-2x centered-icon"></i><br>Search</a></li>
	        <% elsif @map %>
	          <li><a onclick="goToInfoSlide()"><i class="fa fa-globe fa-2x centered-icon home-item"></i><br>Map</a></li>
	          <li><a onclick="goToPlacesSlide()"><i class="fa fa-th-large fa-2x centered-icon cards-item"></i><br>Search</a></li>
	        <% else %>
	          <li><a href="/map_only"><i class="fa fa-globe fa-2x centered-icon home-item"></i><br>Map</a></li>
	          <li><a href="/map"><i class="fa fa-th-large fa-2x centered-icon cards-item"></i><br>Search</a></li>
	        <% end %>
	        <li><a href="/videos"><i class="fa fa-youtube-play fa-2x centered-icon videos-item"></i><br>Videos</a></li>
	        <li><a href="/games"><i class="fa fa-puzzle-piece fa-2x centered-icon games-item"></i><br>Games</a></li>
	        <% if user_signed_in? %>
	          <li><a href="<%= users_places_path %>"><i class="fa fa-user fa-2x centered-icon"></i><br>My Profile</a></li>
	          <li><a href="<%= destroy_user_session_path %>" data-method="delete"><i class="fa fa-user fa-2x centered-icon"></i><br>Log Out</a></li>
	        <% else %>
	          <li><a href="<%= new_user_session_path %>"><i class="fa fa-user fa-2x centered-icon"></i><br>Sign In</a></li>
	        <% end %>
	      </ul>
	    </nav>
	  <% end %>
	  <%if !browser.mobile? && !@set_body_class %>
	    <a href="<%= user_signed_in? ? users_places_path : new_user_session_path %>">
	    <button style="background-image:url(<%= user_signed_in? && current_user.avatar_url ? '"' + current_user.avatar_url + '"' : asset_path("user_copy_2.png") %>)" class="profile-icon menu-button" type="button" id="profile-icon" data-toggle="popover" data-trigger="hover" data-placement="left" data-content="<%= user_signed_in? ? "My Profile" : "Sign In" %>">
	  </button></a>
	  <% end %>

	  <%= javascript_include_tag 'mapbox' %>
	  <%= javascript_include_tag 'application' %>
	  <div class="app-wrap">
	    <%= yield %>
	  </div>
	  <script src="//maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
	  <script src="//cdn.jsdelivr.net/isotope/2.0.0/isotope.pkgd.min.js"></script>
	  <script src="//cdn.jsdelivr.net/imagesloaded/3.1.6/imagesloaded.min.js"></script>
	  <%= javascript_include_tag 'froogaloop' %>
	  <%= javascript_include_tag 'cards' %>
	</body>



<% elsif @placeprograms %>

	    <%= yield %>

<% end %>
</html>
