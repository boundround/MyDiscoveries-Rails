<% offer = order.products.first if local_assigns[:variable].present? && variable == "order" %>
<% if offer %>
  <li>
    <a href="<%= offer_path(offer) %>">
      <div class="po-content-wrapper">
        <img style="background: url('https://res.cloudinary.com/familytravel-com-au/image/fetch/f_auto,q_auto,w_600/<%= showing_image(draw_hero_background(offer)) %>') center center no-repeat;" class="homepage-cover cover-bg">
        <div class="po-content-block">
            <div class="col-xs-10 col-md-10">
              <p class="xs-heading" style="padding-left: 5px">
                  <%= offer.name %>
              </p>
            </div>
            <div class="col-xs-2 col-md-2" style="padding-left: 5px;">
              <% if offer.stickers.first.present? %>
                <img src="<%= offer.stickers.first.file_url %>" style="opacity: 1; padding-top:10px ;position: relative;">
              <% end %>
              <% if offer.stickers.second.present? %>
                <img src="<%= offer.stickers.second.file_url %>" style="opacity: 1; padding-top:10px; position: relative;">
              <% end %>
              <% if offer.full_price > 0 %>
                <div  style=" position: relative;
                              margin: 10px auto;
                              width: 130px;
                              height: 80px;
                              background: linear-gradient(moccasin, #FF9102);
                              border-radius: 15px 2px;
                              float: right;
                              -ms-transform: rotate(-2deg); 
                              -webkit-transform: rotate(-2deg);
                              transform: rotate(-2deg);">
                  <p style="text-align: center; padding: 10px 0 0 0; font-size: 120%; color: #00014B;">Valued up to</p>
                  <p style="text-align: center; padding: 0 0 10px 0; font-weight: bold; font-size: 180%; color: #00014B; text-shadow: 0.5px 0.5px darkgrey;"><%= number_to_currency(offer.full_price, precision: 0) %></p>
                </div>
              <% end %>
            </div>
          <div class="offer-info">
            <div class="col-xs-12 po-price">
                <span class="sm-info">From</span>
                <div class="lg">
                    <span class="po-price-self"><%= number_to_currency(offer_minimum_price(offer), precision: 0) %></span>
                </div>
                <span class="sm-info"></span>
                <span class="sm">or 5 monthly payments of <%= number_to_currency(offer_minimum_price(offer) / 5.0) %></span>
                <span class="posi-nights" style="margin-bottom: 10px"><%= create_duration(offer) %></span>
            </div>
          </div>
        </div>
      </div>
    </a>
  </li>
<% end %>
