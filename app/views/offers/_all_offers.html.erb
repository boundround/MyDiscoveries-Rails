<li>
  <a href="<%= offer_path(offer) %>">
    <div class="th-img-block">
      <img src="<%= draw_small_background(offer) %>" alt="">
    </div>
    <div class="th-content">
      <span class="posi-nights"> <%= pluralize((offer.duration / 1000 / 60 / 60 / 24), "night").gsub(/\d/, "") %></span>
      <span>From $<%= offer.minRateAdult %> </span>
      <p class="xs-heading"><%= offer.name %></p>
      <span class="arrow"></span>
    </div>
  </a>
</li>
