<div data-page="offer">

<!-- BEGIN - breadcrumbs -->
<div class="breadcrumbs width-limiter">
    <a href="#" class="breadcrumbs__link">home</a>
    <a href="#" class="breadcrumbs__link">destinations</a>
    <a href="#" class="breadcrumbs__link">pacific</a>
    <a href="#" class="breadcrumbs__link">australia</a>
    <a href="<%= edit_offer_path(@offer) %>" class="breadcrumbs__link">Edit Offer</a>
</div>
<!-- END - breadcrumbs -->


<div class="product">

    <!-- <div class="hero" style="background: url(<%= main_offer_photo_url(@offer)[:url] %>) center no-repeat;" > -->
    <div class="hero" style="background: url( <%= showing_image(draw_hero_background(@offer)) %>) 50% 50% no-repeat;" >
        <div class="hero-content width-limiter">
            <h2 class="lg-heading"><%= @offer.name %></h2>
            <span class="info-text">LOCATION</span>
            <div class="hc-info">
                <span class="hci-price">
                    <span>$</span>
                    <span class="hci-price-self"><%= @offer.minRateAdult %></span>
                </span>
                <% if @offer.duration.present? %>
                  <span class="hci-nights">
                      <span><%= @offer.duration / 1000 / 60 / 60 / 24 %></span>
                      <span class="xs-invisible"><%= pluralize((@offer.duration / 1000 / 60 / 60 / 24), "night").gsub(/\d/, "") %></span>
                  </span>
                <% end %>
                <div class="info-text">Per Adult</div>
                <!-- <span class="hci-people">
                    <span>2</span>
                    <span class="xs-invisible">people</span>
                </span> -->
                <span class="hci-info"><%= simple_format @offer.specialNotes %></span>
            </div>
            <a class="btn-bordered red invert" href="<%= new_offer_order_path(@offer, number_of_adults: 1)%>">buy now</a>
            <div class="destination-details">
            </div>
        </div>
    </div>

    <div class="product-content width-limiter">

        <aside>
            <h3 class="point-card__header">LOCATION</h3>
            <p class="hotel-name">PROVIDER / OPERATOR NAME</p>

            <div class="package-options">
                <h4 class="xs-heading lars">Package Options</h4>

                <ul>
                    <li class="po-item">

                        <div class="poi-content-top">
                            <div class="poict-price">
                                <span>$</span>
                                <span class="poict-price-self">1399</span>
                            </div>
                            <div class="poict-valued">Valued up to $3,441</div>
                            <div class="poict-people">2 Adults</div>
                            <div class="poict-nights">7 nights</div>
                            <div class="poict-room">TSHELL room, TS Suites Seminyak</div>

                            <a href="" class="btn-bordered red small">buy now</a>
                        </div>

                        <div class="poi-content-bottom">
                            <p>
                                <span>Inclusions:</span>
                                Daily all-day breakfasts, a global smorgasbord buffet dinner, daily poolside cocktails,
                                daily mini-bar treats, four Balinese massages, daily shuttle to Double-Six Beach and
                                Seminyak Square, nightly tacos at Famous Motel Mexicola, plus more!
                            </p>
                        </div>

                    </li>
                    <li class="po-item">

                        <div class="poi-content-top">
                            <div class="poict-price">
                                <span>$</span>
                                <span class="poict-price-self">1399</span>
                            </div>
                            <div class="poict-valued">Valued up to $3,441</div>
                            <div class="poict-people">2 Adults</div>
                            <div class="poict-nights">7 nights</div>
                            <div class="poict-room">TSHELL room, TS Suites Seminyak</div>

                            <a href="" class="btn-bordered red small">buy now</a>
                        </div>

                        <div class="poi-content-bottom">
                            <p>
                                <span>Inclusions:</span>
                                Daily all-day breakfasts, a global smorgasbord buffet dinner, daily poolside cocktails,
                                daily mini-bar treats, four Balinese massages, daily shuttle to Double-Six Beach and
                                Seminyak Square, nightly tacos at Famous Motel Mexicola, plus more!
                            </p>
                        </div>

                    </li>
                </ul>

                <a href="#" class="more-link">see more</a>

            </div>

        </aside>

        <section>

            <div class="country-info main-article">
                <h2 class="lg-heading"><%= @offer.name %></h2>
                <p class="destination-desc " style="display:none;">
                    <%= raw @offer.description %>
                </p>
                <p class="destination-desc">
                    <%= raw @offer.description[0..280]+"..." %>
                </p>
                <a href="javascript:void()" class="readmore-area more-link">READ MORE</a>
                <a href="javascript:void()" class="readmore-area more-link" style="display:none;">LESS</a>

                <div class="ci-map-block">
                    <div id='dest-map' data-map="<%#= create_marker @map_marker %>"></div>
                </div>
                <div id="product-accordion" class="accordion-block">

                    <h3>highlights</h3>
                    <div class="highlights">
                        <p><%= simple_format @offer.highlightsStr %></p>
                    </div>
                    <% if @offer.customStr1.present? %>
                      <h3>details</h3>
                      <div class="details">
                        <% @offer.customStr1 %>
                      </div>
                    <% end %>
                    <% if @offer.itineraryStr.present? %>
                      <h3 id="ci-itinarary-map-loader">Itinerary</h3>
                      <div class="itinerary">
                        <%= @offer.itineraryStr %>
                      </div>
                    <% end %>

                    <% if @offer.customStr2.present? %>
                      <h3>FACILITIES</h3>
                      <div class="FACILITIES">
                          <%= @offer.customStr2 %>
                      </div>
                    <% end %>

                    <h3>Reviews &nbsp; (2)</h3>
                    <div class="reviews">
                        <div class="heading">Hotel Port Denia Signature Scores 8.2 out of 10 based on 2 reviews</div>
                        <div class="review-block">
                            <h5>JANE SNOW 10 / 10</h5>
                            <p>Not a particularly fancy hotel but with staff ALL trained to a very high standard and happy to help which more than makes up for minor weeknesses elsewhere. That is why I spend two x four weeks there per year.</p>
                        </div>
                        <div class="review-block">
                            <h5>KATE BLACK     10 / 10</h5>
                            <p>This is a good hotel a decent walk, or a bus ride, from Denia centre. Nearby is the marina and also some bars and a supermarket. Remember you are in Spain, so there will be a lot of Spanish guests in the hotel. Outside school times they are mainly elderly and good fun, but exuberant as the Spanish are. At weekends and definitely in school holidays there are a lot of children in the hotel and they keep late hours and can be very noisy.</p>
                        </div>
                        <div class=" pagination">
                            <a class="pagination__link-left" href="#"></a>
                            <a class="pagination__link" href="#">1</a>
                            <a class="pagination__link" href="#">2</a>
                            <a class="pagination__link" href="#">3</a>
                            <a class="pagination__link-right" href="#"></a>
                        </div>
                    </div>
                    <% if @offer.customStr3.present? %>
                      <%= @offer.customStr3 %>
                    <% end %>

                    <h3>booking guarantee</h3>
                    <div class="guarantee">
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.</p>

                    </div>


                </div>

                <h3 class="sm-heading lars">Gallery</h3>
                <% unless @photos.blank? %>
                <div class="gallery">
                    <div class="slider-mobile-wrapper">
                        <div class="slider-for">
                            <% @photos.each do |photo| %>
                                <div><img src="<%= photo.path %>" alt="" width="100%"></div>
                            <% end %>
                        </div>
                    </div>
                    <div class="slider-nav xs-invisible">
                        <% @photos.each do |photo| %>
                            <div><img src="<%= photo.path %>" alt="" width="100%"   ></div>
                        <% end %>
                    </div>
                </div>
                <% end %>
                <% unless @videos.blank? %>
                  <div class="videos-block">
                      <% if !@last_video.youtube_id.blank? %>
                        <div id="videos" class="large-video-component-wrapper play-in-modal"
                             style="background: url(<%= @last_video.vimeo_thumbnail %>) no-repeat;"
                             role="img"
                             data-id="<%= @last_video.youtube_id %>"
                             data-video="youtube"
                             data-modal="#video-modal"
                             data-video-url="<%= @last_video.url %>"
                             aria-label="Kids View: Things to do in Sydney"
                             data-thumb="<%= @last_video.vimeo_thumbnail %>" >
                          <div class="overlay"></div>
                          <div class="kids-view-wrapper">
                            <img class="svg-inject" src="/assets/new-images/icon-play-rect-unfilled.svg">
                            <div class="kids-view"><%= @last_video.title %></div>
                          </div>
                          <div class="main-play-icon-wrapper">
                            <div class="main-play-icon"></div>
                          </div>
                        </div>
                      <% else %>
                        <div id="videos" class="large-video-component-wrapper play-in-modal"
                             style="background: url(<%= @last_video.vimeo_thumbnail %>) no-repeat;"
                             role="img"
                             data-id="<%= @last_video.vimeo_id %>"
                             data-video="vimeo"
                             data-modal="#video-modal"
                             data-video-url="<%= @last_video.url %>"
                             aria-label="Kids View: Things to do in Sydney"
                             data-thumb="<%= @last_video.vimeo_thumbnail %>">
                              <div class="overlay"></div>
                                <div class="kids-view-wrapper">
                                    <img class="svg-inject" src="/assets/new-images/icon-play-rect-unfilled.svg">
                                    <div class="kids-view"><%= @last_video.title %></div>
                                </div>
                            <div class="main-play-icon-wrapper">
                                <div class="main-play-icon"></div>
                            </div>
                        </div>
                      <% end %>
                      <%= render partial: "shared/videos_list", locals:{container: "" } %>
                  </div>
              <% end %>

                </div>
            </div>
        </section>
    </div>
</div>
</div>
