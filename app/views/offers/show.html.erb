<div data-page='offer'>
  <div class="deal-header">
    <%- if @offer.tags.present? %>
      <div class="deal-header__tags-holder">
        <%- @offer.tags.to_a.each do |tag| %>
          <span class="deal-header__tag">
            <%= tag %>
          </span>
        <% end %>
      </div>
    <% end %>
    <h1 class="deal-header__point-name">
      <%= @offer.name %>
    </h1>
    <%- if @offer.description.length > 280 %>
      <p class="deal-header__point-short-description offer-desc" style="display:none;">
        <%= raw @offer.description %>
      </p>

      <p class="deal-header__point-short-description offer-desc">
        <%= raw @offer.description[0..280]+"..." %>
      </p>

      <div class="read-more-wrapper">
        <a href="javasctipt:void();" class="readmore-area" style="display:none;">LESS</a>
        <a href="javasctipt:void();" class="readmore-area">SHOW MORE</a>
      </div>
    <% else %>
      <p class="deal-header__point-short-description offer-desc">
        <%= raw @offer.description %>
      </p>
    <% end %>
    <span data-js-scroll-to="js-deal-options" class="deal-header__view-options js-scroll-to-node">view deal options</span>
  </div>

  <div class="deal-promo-photo">
    <div class="hero-image-wrapper dismiss-mega-menu-search" style="background: url(<%= main_offer_photo_url(@offer)[:url] %>) no-repeat;" role="img">
      <div class="overlay"></div>
      <%- if main_offer_photo_url(@offer)[:title].present? %>
        <h2 class="deal-promo-photo__head-line">
          <span class="deal-promo-photo__head-line-icon"></span>
          <%= main_offer_photo_url(@offer)[:title] %>
        </h2>
      <% end %>
    </div>
  </div>

  <div class="deal-promo-media">
    <div class="deal-promo-media__card-holder swiper-container horizontal-scroll js-horizontal-scroll--centered-slides">
      <div class="swiper-wrapper">
        <%= render partial: "shared/media_list", as: :media, locals: { container: "container" } %>
      </div>
    </div>
  </div>

  <div class="deal-wrapper">
    <div class="deal-options js-deal-options">
      <h2 class="deal-options__main-header">
        <%= image_tag 'offer/i/deal/gray-deal.svg', class: "deal-options__main-header-text-icon" %>deal options
      </h2>
      <div class="deal-option">
        <h3 class="deal-option__head-line">
          <%= "#{pluralize(duration_in_days(@offer.duration), 'day')}" %>
        </h3>
        <div class="deal-option-card">
            <%= link_to new_offer_order_path(@offer, number_of_adults: 1) do %>
              <span class="deal-option-card__buy-now">buy now</span>
            <% end %>
          <!-- </a> -->
          <h4 class="deal-option-card__cost">
            <%= "$#{@offer.minRateAdult}"%>
          </h4>
          <span class="deal-option-card__valued-up">
            <%= "Valued up to $#{@offer.maxRateAdult}"%>
          </span>
          <p class="deal-option-card__short-info">
            <%= image_tag 'offer/i/deal/person.svg', class: "deal-option-card-short-info__icon" %>
            <%= "#{pluralize(1, 'Adult')}" %>
          </p>
          <p class="deal-option-card__short-info">
            <%= image_tag 'offer/i/deal/night.svg', class: "deal-option-card-short-info__icon" %>
            <%= "#{pluralize(duration_in_days(@offer.duration), 'day')}" %>
          </p>
          <%- if @offer.includes.present? %>
            <div class="deal-option-card__details js-show-hide-details__parent">
              <div class="deal-option-card__details-interactive-block">
                <p class="deal-option-card__descriptions">
                  <span class="deal-option-card__descriptions deal-option-card__descriptions--bold">Inclusions:</span>
                  <%= simple_format @offer.includes %>
                </p>
              </div>
            </div>
            <a class="btn-bordered red invert" href="<%= new_offer_order_path(@offer, number_of_adults: 1)%>">buy now</a>
            <div class="destination-details">

                  <div class="favourites-wrapper">
                      <% if user_signed_in? && @offer.users.include?(current_user) %>
                        <div class="icon-favourite selected" id="favouriteType" data-post-path="offers_users" data-klass="offer" data-liked="true" data-place-id="<%= @offer.id.to_s %>" data-user-id="<%= user_signed_in? ? current_user.id.to_s : 'no-user' %>"></div>
                        <div class="favourites-title hidden-xs">Remove from favourites</div>
                      <% else %>
                        <div class="icon-favourite" id="favouriteType" data-post-path="offers_users" data-klass="offer" data-liked="false" data-place-id="<%= @offer.id.to_s %>" data-user-id="<%= user_signed_in? ? current_user.id.to_s : 'no-user' %>"></div>
                        <div class="favourites-title hidden-xs" >Add to favourites</div>
                      <% end %>

                  </div>
              </div>
        </div>
    </div>
