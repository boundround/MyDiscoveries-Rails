    <title>My Discoveries Itinerary</title>

</head>
<body class="itinerary-page">

<header class="main-header" id="main-header"></header>

<section class="intro">
    <div class="banner" style="background:url(<%= showing_image(draw_hero_background(@offer)) %>) 50% 50% no-repeat !important;">
    </div>
    <div class="container">
        <h1><%= @offer.name %></h1>
        <h3><%= create_duration(@offer) %> - <%= @operator.name rescue "" %></h3>
        <div class="row">
            <div class="col-xs-7">
                <p><%= simple_format @offer.description %></p>
                <div class="img-waves waves-sm">
                    <%= image_tag(@photos.first.path_url, class: "img-responsive") %>
                </div>
            </div>
            <div class="col-xs-5 orange-block">
                <div class="img-waves waves-sm">
                    <%= image_tag(wicked_pdf_asset_base64('pdf/Bruny Island_print-01.jpg'), class: "img-responsive") %>
                </div>
                <h3>HIGHLIGHTS</h3>
                	<%= simple_format @offer.highlightsStr %>
            </div>
        </div>
    </div>
</section>


<section class="itinerary container">
    <h2>Itinerary</h2>
    <div class="itinerary-item">
        <!-- <p class="heading">DAY 1 - HOBART</p> -->
        <p><%= simple_format @offer.itineraryStr %></p>
        <!-- <p><strong>Meals: Breakfast</strong></p> -->
    </div>
</section>


<section class="includes container">
    <div class="row">
        <div class="col-xs-6">
            <h3>INCLUDES:</h3>
            <%= simple_format @offer.includes.split("EXCLUDES").first.gsub("INCLUDES", "").gsub("<br>", "") %>
        </div>
        <div class="col-xs-6">
            <h3>EXCLUDES:</h3>
            <%= simple_format @offer.includes.split("EXCLUDES").last.gsub("<br>", "") %>
        </div>
    </div>
</section>

