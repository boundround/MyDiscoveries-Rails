<section class="facilities container">
    <h3>FACILITIES</h3>
    <ul>
		<%= simple_format @offer.customStr2 %>
    </ul>
    <div class="img-waves waves-lg">
        <%= image_tag(@photos.third.path_url, class: "img-responsive") %>
    </div>
</section>

<section class="essentials container">
    <div class="row">
        <div class="col-xs-6">
            <h3>BOOKING ESSENTIALS</h3>
            <%= simple_format(
	            @offer.customStr1.presence || @offer.operator.booking_essentials
