<div class="container">
  <h1 class="top20 text-center"><%= order.title %></h1>
  <h5 class="text-center"><%= people_count_label(offer) %></h5>

  <%= simple_form_for [offer, order], html: { role: 'form', class: 'top20'} do |f| %>
    <%= f.input :title, as: :hidden %>
    <div class="row">
      <div class="form-group">
        <%= f.input :number_of_infants,
            label: "Number Of Infants (price per unit: #{unit_price(offer.maxRateInfant, offer.maxRateAdult)}$)",
            input_html: { class: 'form-control js-order-people-count', min: 0 }
        %>
      </div>
      <div class="form-group">
        <%= f.input :number_of_children,
            label: "Number Of Children (price per unit: #{unit_price(offer.maxRateChild, offer.maxRateAdult)}$)",
            input_html: { class: 'form-control js-order-people-count', min: 0 }
        %>
      </div>
      <div class="form-group">
        <%= f.input :number_of_adults,
            label: "Number Of Adults (price per unit: #{offer.maxRateAdult}$)",
            input_html: { class: 'form-control js-order-people-count', min: 0 }
        %>
      </div>
      <div class="form-group">
        <%= f.input(
              :total_price,
              as: :hidden,
              min: 0,
              input_html: {
                data: {
                  'infants-price' => unit_price(offer.maxRateInfant, offer.maxRateAdult),
                  'children-price' => unit_price(offer.maxRateChild, offer.maxRateAdult),
                  'adults-price' => offer.maxRateAdult
                }
              }
            )
        %>
      </div>
      <div class="form-group">
        <%= button_tag(type: 'submit', class: 'btn') do %>
            <span><%= "Checkout (Total Price: " %></span>
            <span class='js-order-total-price'><%= "#{order.total_price.to_i}$)" %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
