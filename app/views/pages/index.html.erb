<% content_for :title, "MyDiscoveries: make one day today. Where over 55s can find holidays experiences they've always wanted to do"%>
<% content_for :og_image, "http://d1w99recw67lvf.cloudfront.net/images/home-page-heroes/hero-slider-1.jpg"%>
<% content_for :og_secure_image, "https://d1w99recw67lvf.cloudfront.net/images/home-page-heroes/hero-slider-1.jpg"%>
<% content_for :description, "Find things to do, reviews and activities to do in destinations around the world, see videos and share stories." %>
<div class="banner-wrapper dismiss-mega-menu-search">
    <div class="banner-image" style="background-image: url('<%= @page.hero_image_url rescue "https://placehold.it/1920x1080" %>')" role="img" aria-label=""></div>
    <div class="overlay"></div>
      <div class="container">
          <div class="row">
              <div class="col-md-12">
                  <div class="row">
                      <div class="col-md-12">
                        <% if user_signed_in? && current_user.admin? %>
                          <h1 class="home-promo__header">
                            <span class="rest-in-place" data-url="/pages/1" data-object="page" data-attribute="page_header" data-placeholder="Enter A Headline">
                              <%= raw @page.page_header rescue "Home Page Info Not Yet Created" %>
                            </span>
                          </h1>
                        <% else %>
                          <h1 class="home-promo__header">
                            <span>
                              <%= raw @page.page_header rescue "Home Page Info Not Yet Created" %>
                            </span>
                          </h1>
                        <% end %>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-12">
                          <form accept-charset="UTF-8" action="/results" method="get">
                              <div>
                                  <div style="display:none">
                                      <input name="utf8" value="âœ“" type="hidden">
                                  </div>
                                  <div class="home-promo__search-wrapper">
                                    <input placeholder="Search" class="home-promo__search search-box-bottom" name="search[common]" type="text" autocomplete="off" />
                                    <span class="home-promo__search-icon"></span>
                                </div>
                              </div>
                          </form>
                          <div class="search-results-container mega-menu" id="search-results-bottom-container" style="display: none">
                              <div class="search-results ">
                                  <%= render :partial=> "search_suggestions/search_results_home" %>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
    </div>
</div>

<div class="section-grey padding-medium">
  <div class="container">
    <div class="row">
      <% if @offers.present? %>
        <div id="offers-list">
          <%= render partial: "offers/all_homepage_offers", collection: @offers, as: :offer %>
        </div>
          <%# unless last_page? @offers %>
          <div class="row hidden-xs single-pagination-container" id="offers-single-pagination-container">
            <div class="hidden single-pagination-loader" align="center">
              <img src="<%= asset_path('loading.gif') %>" width="64" height="64">
            </div>
            <div class="col-xs-12" align="center">
              <%= link_to "SEE MORE", offers_path, class: 'see-more__link' %>
              <%#= link_to "SEE MORE", paginate_on_idx_offers_path(offer_page: @offers.next_page, resources: 'offers', pagination_template: 'offers/all_homepage_offers', collection_object: 'offers'), class: 'see-more__link', remote: true %>
            </div>
          </div>
        <%# end %>
      <% end %>
  </div>
  </div>
</div>

<div class="section-white padding-big">
  <div class="container">
    <div class="row">
