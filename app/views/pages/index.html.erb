                              <a class="proposal-item__link" href="<%= subcategory_path(@category2) %>">see all</a>
                              </p>
                          <% end %>
                      </div>
                      <% end %>
                      <% if @category3.present?  %>
                      <div class="col-md-6">
                          <%= link_to subcategory_path(@category3) do %>
                              <div class="thing-medium-card-wrapper proposal-item">
                                <div class="thing-image" style="background-image: url('<%= @category3.icon.url.to_s rescue nil %>')" role="img" aria-label="<%= @category3.name rescue nil %>">
                                      <div class="overlay"></div>
                                      <div class="proposal-item__description">
                                          <h4 class="proposal-item__header"><%= @category3.name %></h4>
                                      </div>
                                    </div>
                              </div>
                              <p class="proposal-item__link-wrapper proposal-item__link-wrapper--lower">
                              <a class="proposal-item__link" href="<%= subcategory_path(@category3) %>">see all</a>
                              </p>
                          <% end %>
                      </div>
                      <% end %>
                  </div>
                  <!-- row -->
                  <% if @category4.present?  %>
                  <div class="row">
                      <div class="col-md-12">
                          <%= link_to subcategory_path(@category4) do %>
                              <div class="thing-wide-card-wrapper proposal-item">
                                <div class="thing-image" style="background-image: url('<%= @category4.icon.url.to_s rescue nil %>')" role="img" aria-label="<%= @category4.name rescue nil %>">
                                      <div class="overlay"></div>
                                      <div class="proposal-item__description">
                                          <h4 class="proposal-item__header"><%= @category4.name %></h4>
                                      </div>
                                    </div>
                              </div>
                              <p class="proposal-item__link-wrapper proposal-item__link-wrapper--lower">
                              <a class="proposal-item__link" href="<%= subcategory_path(@category4) %>">see all</a>
                              </p>
                          <% end %>
                      </div>
                  </div>
                  <% end %>
                  <!-- row -->
              </div>
          </div>
          <div class="row hidden-md hidden-lg">
              <div class="owl-carousel carousel">
                  <% @subcategories.each do |category| %>
                    <%= link_to subcategory_path(category) do %>
                      <div class="thing-item">
                          <div class="col-sm-3">
                              <div class="thing-medium-card-wrapper">
                                  <div class="thing-image" style="background-image: url('<%= category.icon.url.to_s rescue nil %>')" role="img" aria-label="<%= category.name %>">
                                      <div class="overlay"></div>
                                      <div class="thing-text">
                                          <h4><%= category.name %></h4>
                                          <div class="arrow"><img src="/assets/new-images/hover-state-arrow.png" /></div>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                    <% end %>
                  <% end %>
              </div>
          </div>
      </div>
      <div class="row hidden-sm hidden-xs">
          <div class="col-md-12">
              <div class="see-more">
                  <%= link_to 'SEE MORE', subcategories_path, :class => 'see-more__link' %>
              </div>
          </div>
      </div>
  </div>
</div>
</div>
