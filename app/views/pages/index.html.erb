                              <div class="proposal-item__description">
                                  <h4 class="proposal-item__header"><%= @category1.name %></h4>
                              </div>
                          </div>
                      </div>
                      <p class="proposal-item__link-wrapper">
                        <a class="proposal-item__link" href="<%= subcategory_path(@category1) %>">see all</a>
                      </p>
                  <% end %>
              </div>
              <% end %>
              <div class="col-md-8">
                  <div class="row">
                  <% if @category2.present?  %>
                      <div class="col-md-6">
                          <%= link_to subcategory_path(@category2) do %>
