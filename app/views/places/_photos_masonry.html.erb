
  <div id="photos-masonry">
    <div class="grid-sizer"></div>
    <div class="item about">
      <div class="dude">
        <img src="<%= asset_path('dude-01.svg') %>" class="dude-image">
      </div>
      <div class="about-wrapper">
        <div class="about-hero">
          <% if @hero_video %>
            <iframe class="hero-video" id="player1" src="//player.vimeo.com/video/<%= @hero_video.vimeo_id %>?api=1&player_id=player1" width="630" height="354" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            <div class="priority">-1</div>
          <% else %>
            <% unless @place.photos.empty? %>
              <img class="hero-photo" src="<%= @place.photos.first.path_url(:large) %>" />
              <div class="priority">-1</div>
            <% end %>
          <% end %>
        </div>
        <div class="about-content">
          <h3>About <%= @place.display_name %></h3>
          <div id="area-content">
            <p><%= raw @place.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="vertical-space"></div>

    <%  unless @videos.empty? %>
      <% @videos.each do |video| %>
        <div class="item video photo-card">
          <div class="video-player">
            <div class="icon-wrapper"><%= image_tag(asset_path('washingmachine.png'), class: 'icon') %></div>
            <div class="priority"><%= video.priority ? video.priority : 2 %></div>
            <iframe class="video place-photo" src="//player.vimeo.com/video/<%= video.vimeo_id %>?api=1&player_id=player1" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          </div>
        </div>
      <% end %>
    <% end %>

    <% unless @place.photos.empty? %>
      <% @place.photos.each_with_index do |photo, index| %>
          <div class="item photo photo-card">
            <div class="photo-container">
              <div class="icon-wrapper"><%= image_tag(asset_path('washingmachine.png'), class: 'icon') %></div>
              <div class="priority"><%= photo.priority ? photo.priority : 2 %></div>
              <img class="place-photo" src="<%= photo.path_url(:large) %>" />
              <div id="fun-fact-<%= index %>" class="fun-fact">
                <p><%= raw photo.fun_fact %></p>
              </div>
            </div>
          </div>
      <% end %>
    <% end %>

    <% unless @place.games.empty? %>
      <% @place.games.each do |game| %>
        <div class="item game game-card photo-card">
          <div class="icon-wrapper"><%= image_tag(asset_path('washingmachine.png'), class: 'icon') %></div>
          <div class="priority"><%= game.priority ? game.priority : 2 %></div>
          <%= content_tag "div", class: "game-data", data: {url: game.url} do %>
          <% end %>
          <div class="game-divider">
          </div>
          <img class="game-thumbnail" src="http://placehold.it/328x249" />
        </div>
      <% end %>
    <% end %>

    <% unless @place.discounts.empty? %>
      <% @place.discounts.each do |discount| %>
        <div class="item special photo-card">
          <div class="icon-wrapper"><%= image_tag(asset_path('washingmachine.png'), class: 'icon') %></div>
          <div class="priority"><%= discount.priority ? discount.priority : 2 %></div>
          <div class="discount-card">
            <p><%= raw discount.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
