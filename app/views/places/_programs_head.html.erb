  <script type="text/javascript">
		function sizer(n){
			n.each(function(){
				var te = $(this);
				var w=te.width();
				var h=te.height();
				var ar = w/h;
				
				var ce=te.parent();
				var cw = ce.width();
				var ch = ce.height();
				var car = cw/ch;
				
				if(ar < car)
				{
					te.width(cw);
					var t = (cw/w*h-ch)/2;
					te.css('top',-t);
				}
				else
				{
					te.height(ch);
					var l = (ch/h*w-cw)/2;
					te.css('left',-l);
				}
