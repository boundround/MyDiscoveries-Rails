                <td><%= ff.check_box :_destroy %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div id="table-container">
      <h3>Reviews</h3>
      <table class="table table-striped" id="photo-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>User</th>
            <th>Status</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @place.reviews.each do |review| %>
