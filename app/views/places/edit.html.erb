            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div id="table-container">
      <h3>Stories</h3>
      <table class="table table-striped" id="photo-table">
        <thead>
          <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Photo 1</th>
          <th>Photo 1 Status</th>
          <th>Photo 2</th>
          <th>Photo 2 Status</th>
