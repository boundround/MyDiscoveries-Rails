<div id="table-container">
  <h1>All Places</h1>

  <table class="table table-striped" id="place-table">
    <thead>
    <tr>
      <th>Area</th>
      <th>Area ID</th>
      <th>Place</th>
      <th>Place ID</th>
      <th>Place Type</th>
      <th>Subscription Level</th>
      <th>Updated At</th>
      <th>Updated By</th>
    </tr>
    </thead>
    <tbody>
    <% @areas.each do |area| %>
      <% area.places.each do |place| %>
        <tr>
          <td><%= place.area.display_name %></td>
          <td><%= place.area.id %></td>
          <td><%= link_to place.display_name, edit_place_path(place) %></td>
          <td><%= place.id %></td>
          <td><%= place.categories[0] ? place.categories[0].name : "NOT CATEGORIZED" %></td>
          <td><%= place.subscription_level %></td>
          <td><%= place.updated_at.strftime('%F at %T') %></td>
          <td><%= !place.versions.blank? && place.versions.last.whodunnit ? User.find(place.versions.last.whodunnit).email : "" %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>

