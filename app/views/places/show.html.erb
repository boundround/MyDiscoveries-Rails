                            <span class="carousel-like-icon"><%= raw like_icon(asset) %></span>
                          </div>
                      </div>
                      <%# end %>
                    <% end %>

                </div><!--/.carousel -->
            </div>
        </div>
        <% end %>
        <% unless @stories.blank? %>
        <div class="br15_features hidden-xs container-fluid">
            <div class="row">

