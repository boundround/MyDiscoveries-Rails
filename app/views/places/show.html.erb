                    </div>-->
                    <%# @all_photos_and_videos.each_with_index do |asset, index| %>
                    <% @photos.each_with_index do |asset, index| %>
                     <%# unless asset.class.to_s == "Video" || asset.class.to_s == "UserPhoto" %>
                      <div>
                          <div class="embed-responsive embed-responsive-16by9">
                            <img src="<%= asset.path_url(:medium)%>" alt='<%= asset.caption ? asset.caption : "" %>' class="embed-responsive-item" data-slide-number="<%= index %>" data-caption="<%= asset.caption ? asset.caption : '' %>" data-placeUrl="<%= asset.place ? place_path(asset.place) : '' %>" data-placeName="<%= asset.place ? asset.place.display_name : '' %>">
