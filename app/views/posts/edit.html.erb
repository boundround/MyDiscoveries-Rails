<hr>
<div class="container">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :credit %>
    <%= f.text_field :credit, class: "form-control" %>
    <%= f.label :content %>
    <%= f.bootsy_area :content, class: "form-control", rows: 50, editor_options: {html: true} %>
    <%= f.submit :submit, class: "btn btn-default btn-lg btn-warning" %>
  <% end %>
</div>
