<% provide(:title, @post.title) %>
<% provide(:category, @post.teaser) %>
<div class="container blog-container thing-page">
  <h1 class="post-heading"><%= @post.title %></h1>
  <p class="text-center">by <%= @post.user.username %></p>
  <p class="text-center">
    <img src="<%= asset_path('br-logo-new-blue.png') %>" height="50px">
  </p>
  <%= raw @post.content %>
</div>
<% unless @places.blank? %>
<div class="thing-page">
  <div class="background">
    <div id="thingstodo" class="container dest-things-wrapper">
        <div class="row">
          <div class="col-xs-12">
              <h3>Things to do</h3>
          </div>
        </div>
        <div class="row">
            <div class="owl-carousel carousel" id="places_to_visit-list">
              <%= render partial: 'places_to_visit_list', collection: @places, as: :area %>
            </div>
        </div>
      <% unless last_page? @places %>
        <div class="row hidden-xs single-pagination-container" id="places_to_visit-single-pagination-container">
            <div class="col-xs-12 load-more">
              <div class="hidden single-pagination-loader" align="center">
                <img src="<%= asset_path('loading.gif') %>" width="64" height="64">
              </div>
            <%= link_to "LOAD MORE", paginate_place_to_visit_post_path(@post, places_to_visit_page: @places.next_page, resources: 'places_to_visit', collection_object: 'area'), class: 'single-pagination', remote: true %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
<style>
  img {
    margin-right: 20px;
  }
</style>
