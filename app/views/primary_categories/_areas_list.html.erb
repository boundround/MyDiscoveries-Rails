<div class="col-sm-6 col-md-4 col-lg-4 col-xs-6">
  <div class="thumbnail padd0">
    <div class="image-cat">
      <%= image_tag area.hero_image.try(:url), class: 'top-rounded img-responsive' %>
    </div>
    <div class="caption text-center">
      <h4 class="font-orange2"><%= area.display_name %></h4>
    </div>
    <div class="details-dest">
      <div class="left">
        <%= link_to "<i class='fa fa-newspaper-o'></i>#{area.stories.count}".html_safe, place_stories_path(area) %>
      </div>
      <div class="right">
        <a href="#">
        <i class="fa fa-thumbs-o-up"></i> 100%</a>
      </div>
    </div>
  </div>
</div>
