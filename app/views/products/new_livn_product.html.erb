<div class="container">
  <h1>Create Product by LIVN Product ID</h1>

  <%= simple_form_for '', url: create_livn_product_products_path, method: :post, html: { role: 'form' } do |f| %>
    <div class="form-group">
      <%= f.input :livn_product_id, label: 'LIVN Product ID', input_html: { class: 'form-control'}  %>
    </div>
    <div class="form-group">
      <%= link_to 'Cancel', products_path, class: "btn btn-default btn-lg" %>
      <%= f.submit 'Create', class: "btn btn-default btn-lg" %>
    </div>
  <% end %>

</div>
