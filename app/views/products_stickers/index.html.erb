<div class="container">
  <%= render "/offers/admin_tabs" %>
  <% if @stickers.present? %>
    <%= simple_form_for @offer, url: offer_path(@offer), html: { role: 'form' } do |f| %>
        <% @stickers.each do |sticker| %>
          <div>
            <%= hidden_field_tag "product[sticker_ids][]", nil%>
            <%= check_box_tag "product[sticker_ids][]", sticker.id, @offer.sticker_ids.include?(sticker.id), id: dom_id(sticker) %>
            <img src="<%= sticker.file_url %>"><br/>
          </div>
        <% end %>
      <div class="form-group">
        <%= f.button :submit, 'Update' %>
      </div>
    <% end %>
  <% end %>
  <div class="photo-container">
    <h2>Add New Sticker</h2>
    <%= simple_form_for @sticker do |f| %>
      <div class="form-group">
        <p><%= f.input :file, label: false%></p>
      </div>
      <div class="form-group">
        <%= f.button :submit%>
      </div>
    <% end %>
  </div>
</div>
