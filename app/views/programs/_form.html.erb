<div class="container">

  <h2>Add New Program</h2>
<%= simple_form_for @program do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' }%>
  </div>
 
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control' }%>
  </div>
 
  <div class="form-group">
    <%= f.input :yearlevelnotes, input_html: { class: 'form-control' }%>
  </div>

    <div class="form-group">
    <%= f.input :cost, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.input :programpath, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.input :heroimagepath, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.input :times, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.input :booknowpath, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.input :contact, input_html: { class: 'form-control' }%>
  </div>

    <div class="form-group">
      <%= f.input :tag_list, label: 'Tags (Comma Separated Values)', input_html: { class: 'form-control'} %>
    </div>
		
    <div class="form-group">
      <%= f.input :programactivity_list, label: "Program Activity Tags ( Valid tags: "+ valid_program_activity_tags_csv()+" )", input_html: { class: 'form-control'} %>
      <!--%= f.input :programsubject_list, collection: valid_program_subject_tags(), input_html: { class: 'form-control', multiple: true } %-->
    </div>

    <div class="form-group">
      <%= f.input :programactivity_list, label: "Program Activity Tags ( Valid tags: "+ valid_program_activity_tags_csv()+" )", input_html: { class: 'form-control'} %>
      <!--%= f.input :programactivity_list, collection: valid_program_activity_tags(), input_html: { class: 'form-control', multiple: true } %-->
    </div>

    <div class="form-group">
      <%= f.input :programyearlevel_list, label: "Program Year Levels ( Valid tags: "+ valid_program_activity_tags_csv()+" )", input_html: { class: 'form-control'} %>
      <!--%= f.input :programyearlevel_list, collection: valid_program_yearlevel_tags(), input_html: { class: 'form-control', multiple: true } %-->
    </div>

    <div class="form-group">
      <%= f.button :submit%>
    </div>
<% end %>
</div>