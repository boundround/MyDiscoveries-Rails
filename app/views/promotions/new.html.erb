<div class="container" data-controller='vouchers'>
  <h2>New Promotion</h2>
  <%= simple_form_for @promotion,
    url: promotions_path, method: :post, html: { role: 'form' } do |f| %>
      <%=
        render 'form',
          f: f,
          promotion: @promotion,
          calculator_flat_percent: @calculator_flat_percent
       %>
  <% end %>
</div>
