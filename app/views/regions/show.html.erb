<div data-page="region">
  <h1 class="home-promo__header blue"><%= @region.display_name %></h1>

  <!-- BEGIN - map -->
  <div class="promo-map js-promo-map">
        <div class="google-promo-map js-google-promo-map"></div>
        <input type="hidden" data-zoom="<%= @region.zoom_level %>" data-marker="<%= @places_to_visit_map %>" name="region">
  </div>
<!-- END - map -->
<div class="region destinations">
    <div class="width-limiter">
        <ul>
          <% if @countries.present? %>
            <% @countries.each do |country| %>
            <li>
                <a href="<%= country_path(country) %>">
                    <img src="<%= draw_hero_background(country) %>" alt="">
                    <span><%= country.display_name %></span>
                </a>
            </li>
          <% end %>
        <% end %>
        </ul>
    </div>
</div>

<% unless @place_to_go.blank? %>
<div class="region places-to-go">
    <div class="width-limiter">
        <h3 class="proposal__header">Places to go</h3>
        <div class="block-wrapper slick-slider" id="place_to_go-list">
            <%= render partial: 'place_to_go_list', collection: @place_to_go, as: :place %>
        </div>
      <% unless last_page? @place_to_go %>
        <div class="hidden-xs single-pagination-container" id="place_to_go-single-pagination-container">
            <div class="load-more">
              <div class="hidden single-pagination-loader" align="center">
                <img src="<%= asset_path('loading.gif') %>" width="64" height="64">
              </div>
            <%= link_to "load more", paginate_place_to_go_region_path(@region, place_to_go_page: @place_to_go.next_page, resources: 'place_to_go', pagination_template: 'regions/place_to_go_list', collection_object: 'place'), class: 'load-more single-pagination', remote: true %>
            </div>
        </div>
      <% end %>
    </div>
</div>
<% end %>
<% if @fun_facts.present? %>
  <div class="region did-you-know">
      <div class="width-limiter">
          <h4>Did you know?</h4>
          <%= render partial: 'shared/fun_facts', collection: @fun_facts, as: :funfact %>
      </div>
  </div>
<% end %>

<div class="region package-offers">
    <div class="width-limiter">
        <h3 class="proposal__header">Package Offers</h3>
        <ul class="slick-slider">
            <li>
                <div class="po-content-wrapper">
                    <img src="/assets/mydiscoveries_icon/i/follow-the-journey-item-bg.png" alt="">
                    <div class="po-content-block">
                        <div class="po-stay-info">
                            <span>From $1399</span>
                            <span class="posi-nights">8 nights</span>
                        </div>
                        <p class="sm-heading">
                            Seminyak's Sky High Sensation
                        </p>
                        <p>Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore!</p>
                        <p class="info-text">Offer ends 09/12/2016</p>
                        <a href="#">see offer</a>
                    </div>
                </div>
            </li>
            <li class="recl-block">
                <a  href="#">
                    <img src="/assets/mydiscoveries_icon/reclama.jpg" alt="">
                </a>
            </li>
        </ul>
        <a href="#" class="btn-bordered">all offers</a>
    </div>
</div>
<% unless @places_to_visit.blank? %>
<div class="region things-to-do">
    <div class="width-limiter">
        <h3 class="proposal__header">Things to do in <%= @region.display_name %></h3>
        <ul class="slick-slider" id="places_to_visit-list">
            <%= render partial: 'areas_list', collection: @place_to_go, as: :place %>
            <li class="recl-block">
                <a  href="#x">
                    <img src="/assets/mydiscoveries_icon/reclama.jpg" alt="">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- BR first go -->
                    <ins class="adsbygoogle"
                    style="display:block"
                    data-ad-client="ca-pub-3125270010093298"
                    data-ad-slot="1632886169"
                    data-ad-format="auto"></ins>
                    <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                  <p class="wild-ad-banner__paragraph">Sponsored</p>
                </a>
            </li>
        </ul>
        <% unless last_page? @places_to_visit %>
          <div class="row hidden-xs single-pagination-container" id="places_to_visit-single-pagination-container">
                <div class="hidden single-pagination-loader" align="center">
                  <img src="<%= asset_path('loading.gif') %>" width="64" height="64">
                </div>
              <%= link_to "load more", paginate_place_to_visit_region_path(@region, places_to_visit_page: @place_to_go.next_page, resources: 'place_to_go', pagination_template: 'regions/areas_list', collection_object: 'place'), class: 'load-more single-pagination', remote: true %>
          </div>
        <% end %>
    </div>
</div>
<% end %>

<% if @fun_facts.present? %>
  <div class="region did-you-know grey">
      <div class="width-limiter">
          <h4>Did you know?</h4>
          <%= render partial: 'shared/fun_facts', collection: @fun_facts, as: :funfact %>
      </div>
  </div>
<% end %>

