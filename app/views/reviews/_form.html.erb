<!-- MODAL LEAVE REVIEW -->
<div id="ReviewModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-margin-top">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal-orange" data-dismiss="modal">
          &times;
        </button>
        <h3 class="modal-title" align="center">Add a review</h3>
        <h4 class="modal-title font-orange2" align="center">
          <%= variable.try(:display_name) %>
        </h4>
      </div>
      <div class="modal-body" align="center">
         <p align="left" class="btm10">Your rating</p>

         <div class="row row-border-review top10">
           <div class="col-xs-12 col-sm-12">
            <div class="star-place"
                 data-classname="<%= variable.class.to_s %>"
                 data-id="<%= variable.id %>"
                 data-dimension="quality"
            >
            </div>
           </div>
         </div>
        <%= simple_form_for [variable, review], remote: true do |f| %>
            <%= f.input :user_id, as: :hidden,
                  input_html: { value: current_user.try(:id) }
            %>
            <%= f.input :status, as: :hidden, input_html: { value: "draft" } %>
         <div class="form-group top20">
            <textarea class="form-control"
                      name="review[content]"
                      rows="5"
                      id="review_content"
                      placeholder="Enter your review (max 1000 characters)."></textarea>
         </div>
         <div class="row">
            <div class="col-xs-6 col-sm-6 top10" align="left">
              Reviewing as
            </div>
            <div class="col-xs-6 col-sm-6" align="left">
            <section class="your-stories style-bg-transparent">
              <div class="head-stories style-bg-transparent">
                <div class="left">
                <% if user_signed_in? %>
                  <div class='user-wrapper'>
                    <div class="user-rounded-avatar" style="background: url(<%=showing_image(current_user.avatar_url || asset_path('generic-hero-small.jpg'))%>) no-repeat;"></div>
                    <div class="profile-text style-bg-transparent grey">
                      <%= current_user.name %>
                    </div>
                  </div>
                  <% end %>
                </div>
              </div>
            </section>
            </div>
         </div>
         <br>
         <div class="form-group">
          <%= f.submit "Publish",
                class: "btn btn-danger button-orange btn-block btn-height fontbig-button",
                id: "publish-review-button"
          %>
         </div>
        <% end %> <!--/simple_form -->
      </div>
    </div>
  </div>
</div>
<!-- END MODAL LEAVE REVIEW -->
