<div class="btm15 card review-content">
  <div class="body-stories">
    <p class="some-text" data-full-text="<%= review.content %>">
      <% if review.content.length > 280 %>
          <%= review.content[0..280] + "..." %>
        <% else %>
         <%= review.content %>
      <% end %>
    </p>
  </div>
  <div class="head-stories">
    <div class="left">
      <a href="#" class="black">
        <%= strip_domain_from_username review.user %>
      </a>
      <span class="grey">Jul 2015</span>
    </div>
    <div class="right">    <!-- #hardcode -->
      <%# get_user_place_rating_from_review(review).times do |star| %>
        <%# <i class="fa fa-smile-o"></i>
      <%# end %>
      <!-- make tour helper method for review smiley -->
      <%= raw draw_smile_review(review) %>
    </div>
  </div>
</div>
