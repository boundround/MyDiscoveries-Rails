<div class="instant-search-results">
  <div class="row">
    <div class="instant-hits-result col-md-12">
    </div>
  </div>
  <div class="row">
    <div class="instant-hits-result-pagination pagination col-md-12"></div>
  </div>
</div>

<script type="text/template" id="instant-hit-template">
  {{#hits}}
    <div class="result-card">
      <div class="outer-image outer-js">
        <img class="inner-js rescue-image" src="{{ hero_photo.url }}" alt="{{ hero_photo.alt_tag }}">
      </div>
      <div class="list-result">
        <h3>
          <a href="{{ url }}">
            {{{ display_name }}}
          </a>
          </h3>
        <p class="desc-result">
          {{{ description }}}
        </p>
        <div class="footer-result">
          <p class="pull-left">{{{ age_range }}}</p>
          <a class="pull-right viator_link {{{ viator_link.klass }}}" href="{{{ viator_link }}}">Book Now</a>
        </div>
      </div>
    </div>
  {{/hits}}
</script>

<script type="text/template" id="instant-pagination-template">
  <ul class="pagination">
    <li {{^prev_page}}class="disabled"{{/prev_page}}><a href="#" {{#prev_page}}class="go-to-page-instant-search" data-page="{{ prev_page }}"{{/prev_page}}>&#60;</a></li>
    {{#pages}}
    <li class="{{#current}}active{{/current}} {{#disabled}}disabled{{/disabled}}"><a href="#" {{^disabled}} class="go-to-page-instant-search" data-page="{{ number }}" {{/disabled}}>{{ number }}</a></li>
    {{/pages}}
    <li {{^next_page}}class="disabled"{{/next_page}}><a href="#" {{#next_page}}class="go-to-page-instant-search" data-page="{{ next_page }}"{{/next_page}}>&#62;</a></li>
  </ul>
</script>

<script type="text/template" id="instant-facet-template">
  <div class="facet hidden-xs hidden-sm">
    <h5>{{ title }}</h5>
    {{#values}}
      <div class="form-group">
        <div class="checkbox">
          <label>
            <input type="checkbox" class="facet-link instant-search-toggle-refine {{#disjunctive}}facet-disjunctive{{/disjunctive}} {{#isRefined}}facet-refined{{/isRefined}}" data-facet="{{ facet }}" data-value="{{ name }}" {{#isRefined}}checked="true"{{/isRefined}}>
            {{ name }} <span class="facet-count pull-right">({{ count }})</span>
          </label>
        </div>
      </div>
    {{/values}}
  </div>
</script>
