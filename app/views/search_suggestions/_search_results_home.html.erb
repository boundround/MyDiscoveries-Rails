<div class="no-result"></div>
<div id="stats"></div>
<div class="hits"></div>
<div class="more-result-id-home"></div>

<script type="text/template" id="hit-template-home">
{{#hits}}
  <div class="search-results-card-wrapper">
      <a class="search-results-card" href="{{ url }}">
          <div class="search-results-img hit-result"
               style="background: url({{ hero_photo.url }}) no-repeat;"
               role="img" aria-label="{{{ display_name }}}"
               alt="{{ photos.0.alt_tag }}"
               data-link="{{ url }}"
               >
          </div>
          <div class="search-results-card-content">
              <h5>{{{ display_name }}}</h5>
              <h4>{{{ display_address }}}</h4>
          </div>
      </a>
  </div>
  {{/hits}}
</script>

<script type="text/template" id="more-results-template-home">
<hr class="btm0">
<div class="more-result">
  <%= form_tag searching_path, id: '', method: :get  do %>
      <%= submit_tag "", class: "more-result search-results-find-more" %>
      <%= hidden_field_tag "search[common]","{{query}}" %>
          <span>FIND MORE RESULTS FOR <span class="search-term">' {{ query }} '</span></span>
          <img class="search-arrow" src="/assets/new-images/carousel-nav-arrow.png"/>
  <% end %>
</div>
</script>
