        <% else %>
        <%= link_to "Load More", paginate_photos_country_path(@country, active_photos: @photos.next_page, resources: 'photos', pagination_template: 'shared/featured_photos_list'), class: 'btn btn-default single-pagination btn btn-default top5 load-more', remote: true %>
        <% end %>
      </div>
    <% end %>
</section>
<% end %>