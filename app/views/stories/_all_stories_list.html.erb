<div class="col-md-6 col-lg-6 col-lg-offset-0 story-wrapper thing-page-segment" onclick="window.location='<%= story.class.to_s == "Story" ? story_path(story) : post_path(story) %>'">
  <div class="story">
    <div class="story-header-details-wrapper">
      <div class="user-dp"
           style="background: url(<%= showing_image(story.user.avatar_url)%>) no-repeat;"
           role="img"
           aria-label="User: <%= story.user.username %>">
      </div>
      <div class="username">
        <% if story.user.is_private? %>
          <%= story.user.username %>
        <% else %>
          <%= link_to story.user.username, public_profile_user_path(story.user) %>
        <% end %>
      </div>
      <div class="date hidden-xs"><%= story.publish_date.strftime("%d %B %Y") %></div>
    </div>
    <div class="story-content">
      <h4 class="story-title"><%= raw story.title.blank? ? story.title : story.title.truncate(65) %></h4>
      <p><%= raw story.teaser %></p>
      <% image = story.is_a?(Story) ? story.hero_image.url : story.story_images.first %>
      <div  class="story-img"
            style="background: url(<%= showing_image( image || asset_path('generic-hero-small.jpg') ) %>) no-repeat;"
            role="img"
            aria-label="Story Image">
      </div>
    </div>
  </div>
</div>
