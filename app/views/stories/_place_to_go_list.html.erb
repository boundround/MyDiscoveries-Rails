<li style="background-color: transparent; padding-left: 0; padding-right: 0;">
  <a href="<%= place_path(place) %>">
  <div class="destination-card-item">
    <div class="col-sm-12" style="padding-left: 0; padding-right: 0">
      <div class="destination-card">
        <div class="destination-image"
           style="background-image: url('<%= draw_medium_background(place)%>'); padding-bottom: 1rem;padding-top: 1rem"
           role="img">
          <div class="overlay"></div>
          <div class="geolocation">
            <img src="/assets/new-images/icon-geolocator.png"/><span><%= place.country.display_name %></span>
          </div>
          <div class="destination-city">
            <h2><%= place.display_name %></h2>
            <div class="arrow"><img src="/assets/new-images/hover-state-arrow.png"/></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </a>
</li>