      <div class="things-img" style="background: url(<%= showing_image(area.photos.count > 0 ? area.photos.first.path_url(:small) : asset_path('generic-hero-small.jpg')) %>) no-repeat;"
           role="img"
           aria-label="Catmosphere"></div>
      <div class="dest-thing-content">
          <h4><%= area.display_name %></h4>

        <div class="tags">
          <% area.subcategories.subcats.each do |c| %>
            <div class="tag">
                <div class="v-center">
                  <a href="<%= subcategory_path(c) %>"><%= c.name %></a>
                </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
