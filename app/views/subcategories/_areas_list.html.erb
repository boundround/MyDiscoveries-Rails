<a href="<%= place_path(area) %>">
<div class="col-md-4">
<div class="thumbnail padd0">
  <div class="image-cat">

    <img src="<%= showing_image(area.photos.count > 0 ? area.photos.first.path_url(:small) : asset_path('generic-hero-small.jpg')) %>" alt="" class="top-rounded img-responsive">

  </div>
  <div class="caption place-caption text-center">
    <h4 class="font-orange2"><%= area.display_name %></h4>
  </div>
  <div class="details-dest">
    <div class="left">
      <% area.subcategories.subcats.each do |c| %>
        <a href="<%= subcategory_path(c) %>" class="badge-link"><%= c.name %></a>

      <% end %>
    </div>
    <!-- #hardcode -->
    <div class="right">
      <% if !area.viator_link.blank? %>
        <a href="<%= area.viator_link%>" target="_blank" class="pink">Book Now</a>
      <% end %>
    </div>
  </div>
</div>
</div>
</a>
