<a href="<%= place_path(area) %>">
<div class="col-md-4 col-sm-6 dest-thing-wrapper">
  <div class="dest-thing">
      <div class="dest-thing-overlay-wrapper">
          <% unless area.viator_link.blank? %>
              <div class="dest-thing-overlay">
                  <div class="dollar-rating">
                  <% price = area.subcategories.find_by_category_type("price")%>
                  <%= !price.blank?? price.name : "" %>
                  </div>
                  <div class="book-wrapper">
                      <a class="btn book-btn" onclick="bookNowClicks()" href="<%= area.viator_link%>" target="_blank">BOOK</a>
                  </div>
              </div>
          <% end %>

          <!-- <div class="dest-thing-overlay">
              <div class="dollar-rating">$</div>
