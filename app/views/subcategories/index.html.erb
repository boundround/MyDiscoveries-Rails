<div class="container padding-style top40">
  <div class="text-left top20 btm30">
    <h4 class="section-title font-weight-style">Explore Things To Do</h4>
  </div>
  <div class="row" id="categories-list">
    <% @subcategories.each do |category| %>
      <% if category.eql? @subcategories.first %>
        <div class="col-lg-12 col-md-12 btm15">
          <%= link_to subcategory_path(category) do %>

            <div class="img-bg-wide outer-js">
              <%= image_tag category.icon.url.to_s , class: 'img-explore-wide inner-js' %>
              <span class="text-explore">
                <%= category.name %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="col-lg-6 col-md-6 col-sm-6 btm15">
          <div class="img-bg outer-js">
            <%= link_to subcategory_path(category) do %>
              <%= image_tag category.icon.url.to_s , class: 'img-explore inner-js' %>
              <span class="text-explore">
                <%= category.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>
