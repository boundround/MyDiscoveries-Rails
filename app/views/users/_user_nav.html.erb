<header class="container-fluid">
      <div class="row">
        <div class="col-sm-2 col-md-1">
          <a href="<%= root_path %>" class="center-block hidden-xs"><img src="<%= asset_path('br_logo_new.png') %>"  class="img-responsive br_logo_tab" alt=""></a>
        </div>
        <div class="col-sm-10 col-md-11">
          <nav class="navbar navbar-default">

              <div class="navbar-header">
                <div class="row">
                  <div class="visible-xs col-xs-4">
                    <a href="#"><img src="<%= asset_path('br_logo_new.png') %>" class="img-responsive  br_tab_logo_xs"></a>
                  </div>
                  <div class="col-xs-4 visible-xs text-center">
                    <div class="br_search visible-xs"><a href="<%= root_path %>"><span class="fa fa-search"></span></a></div>
                  </div>
                  <div class="col-xs-4 visible-xs">
                    <button type="button" class="navbar-toggle " data-toggle="offcanvas" data-target="" aria-expanded="false">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                  </div>
                </div>
              </div>
              <div class="navbar-collapse row navheadercollapse collapse in" id="bs-example-navbar-collapse-1" aria-expanded="false">
                <div class="row br_profile_header visible-xs">
                  <div class="col-sm-8 col-sm-offset-2">
                    <div class="row">
                      <div class="col-sm-3 col-sm-offset-1">
                        <div>
                          <div class="br_shell col-sm-offset-3">
                            <a href="#" data-toggle="modal" data-target="#br_modal">
                              <% if @user.avatar_url %>
                              <img src="<%= current_user.avatar_url %>" class="img-responsive" alt="">
                              <% else %>
                              <i class="fa fa-user fa-5x"></i>
                              <% end %>
                            </a>
                          </div>
                          <% if @user.points_balance %>
                            <label class="br_round_label"><%= @user.points_balance.balance.to_s %></label>
                          <% else %>
                            <label class="br_round_label">0</label>
                          <% end %>
                        </div>
                      </div>
                      <div class="col-sm-8 br_profile_detail">
                        <div class="row">
                          <div class="col-md-12">
                            <div class="row">
                              <div class="col-sm-11 col-sm-offset-1">
                                <h2><%= @user.name %><br>
                                  <span>Member Since <%= @user.created_at.strftime("%Y") %></span>
                                </h2>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="row">

                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <ul class="nav navbar-nav navbar-left text-uppercase nav-justified">
                  <li class="br_search hidden-xs"><a href="<%= root_path %>"><span class="fa fa-search"></span></a></li>
                  <li class="<%= @active_points ? 'active' : '' %>"><a href="<%= user_path(current_user) %>"><span class="fa fa-user"></span>Points</a></li>
                  <li class="<%= @active_wishlist ? 'active' : '' %>"><a href="/users/places"><span class="fa fa-heart"></span>Wishlist</a></li>
                  <li class="<%= @active_stories ? 'active' : '' %>"><a href="/users/stories"><span class="fa fa-book"></span>Stories</a></li>
                  <li class="<%= @active_reviews ? 'active' : '' %>"><a href="/users/reviews"><span class="fa fa-comment"></span>Reviews</a></li>
                  <li class="<%= @active_photos ? 'active' : '' %>"><a href="/users/photos"><span class="fa fa-camera"></span>Photos</a></li>
                  <li class="<%= @active_friends ? 'active' : '' %>"></li>
                  <li class="br_img hidden-xs"><a href="#">
                    <span class="img-circle">
                    <% if @user.avatar_url %>
                      <img src="<%= current_user.avatar_url %>" class="img-responsive" alt="">
                    <% else %>
                      <i class="fa fa-user fa-3x"></i>
                    <% end %>
                    </span>
                    <% if @user.points_balance %>
                    <label><%= @user.points_balance.balance.to_s %></label>
                    <% else %>
                    <label>0</label>
                    <% end %>
                    </a></li>
                  <li class="hidden-xs"><a href="<%= destroy_user_session_path %>" class="sign-out">Sign out</a> </li>
                </ul>
                 <div class="row visible-xs">

                     <a href="#" class="btn btn-block btn-default br_sign_out text-center text-uppercase">Signout</a>

                 </div>
              </div><!-- /.navbar-collapse -->

          </nav>


        </div>
      </div>
    </header>
    <div class="br_tab_xs_header visible-xs container-fluid">
      <div class="row">

        <div class="col-xs-12">
          <a href="#" data-toggle="offcanvas"><span class="fa fa-bars"></span></a> &nbsp; <a href="#" class="br_logo_top_header">BoundRound</a>
        </div>
      </div>
    </div>
    <%= render 'edit_profile' %>
