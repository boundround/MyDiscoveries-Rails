<%= render "layouts/navbar" %>
<% if @user == current_user || current_user.admin %>
<div class="container">
  <div class="row">
    <div class="head-title">
        <%#= render 'user_status' %>
      <h4 class="top20">My account</h4>
      <h2 class="gray-font">Favourites</h2>
    </div>
  </div>
  </div> <!-- row -->
</div>

    <div class="border-section btm10"></div>


<section class="places-to-go">
  <div class="container">
    <div class="row">
      <% @user.favorite_places.each do |place| %>
        <a href="<%= place_path(place) %>">
          <div class="col-xs-12 col-md-6">
            <div class="thumbnail">
              <div class="image-cat image-cat-left">
                <img src="<%= draw_small_background(place) %>" alt="" class="img-responsive img-full-div">
              </div>
              <div class="caption caption-right">
                <h4 class="gray-font"><%= place.joins(:similar_places).where('similar_places.similar_place_id = ?', @place.id).first.display_name rescue '' %></h4>
                <h2><%= place.display_name %></h2>
              </div>
              <div class="details-dest">
                <div class="left">
                  <!-- <a href="#"><i class="fa fa-male"></i> Do</a> -->
                  <% place.subcategories.subcats.each do |cat| %>
                    <a href="<%= subcategory_path(cat) %>" class="subcategories-box"><%= cat.name %></a>
                  <% end %>
                </div>
                <div class="right">
                  <% if !place.viator_link.blank? %>
                    <a href="<%= place.viator_link%>" target="_blank" class="pink">Book Now</a>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </a>
      <% end %>
    </div> <!-- row -->
  </div>
</section>

<% else %>
  <h1>You must be logged into view this page</h1>
<% end %>
<%= render "layouts/footer" %>
