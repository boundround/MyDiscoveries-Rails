<div class="left-user">
  <div class="container">
    <a href="<%= root_path %>"><input type="image" src="<%= asset_path("home-button-blue.png") %>" class="globe-home"></a>
    <div class="banner-wrapper game-video-banner">
      <div class="banner">
        <div class="title-wrapper">
          <h1 class="title">Places</h1>
        </div>
      </div>
    </div>
    <div class="place-card user-story-card" style="<%= @user.places.blank? ? 'float:none;left:44%' : '' %>" data-toggle="modal" data-target="#userStoryModal">
      Click Here to email us your own photos and story.<br> You may get featured in Bound Round!
    </div>
    <% unless @user.places.blank? %>
      <ul>
        <% @user.places.each do |place| %>
          <div class="place-card" id="<%= place.slug %>">
            <%= raw like_icon(place) %>
            <div class="upper-card" style="background-image: url(<%= !place.photos.blank? ? place.photos.first.path_url(:small) : "http://placehold.it/350x150" %>)">
              <div class="card-category">
                <img src="http://d1w99recw67lvf.cloudfront.net/category_icons/<%= place.categories[0].identifier %>_icon.png" alt="sights icon"><%= place.categories[0].name %>
              </div>
            </div>
          <a href="<%= place_path(place) %>">
            <p class="place-title <%= place.categories[0].identifier %>"><%= place.display_name %></p><br>
          </a>
          <div class="card-footer">
            <div class="image-count">
              <img src="http://d1w99recw67lvf.cloudfront.net/category_icons/photos_count.png" height="12px" alt="photo count"><%= place.photos.length %>
            </div>
            <div class="video-count"><img src="http://d1w99recw67lvf.cloudfront.net/category_icons/videos_count.png" height="12px" alt="videos count"><%= place.videos.length %>
            </div>
            <div class="game-count">
              <img src="http://d1w99recw67lvf.cloudfront.net/category_icons/games_count.png" height="12px" alt="games count"><%= place.games.length %>
            </div>
          </div>
        </div>
        <% end %>
      </ul>
    <% else %>
      <div class="home-text">
        <p>You have not favourited any Places yet!</p>
        <a href='<%= root_path %>'>Start exploring</a> and click the <i class="fa fa-star fa-2x"></i>
        to add them to your personal list.
      </div>
    <% end %>
    </div>
  </div>
<div class="right-user">
  <%= render 'sidebar' %>
</div>
<div class="modal fade" id="userStoryModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Send Us Your Story</h4>
      </div>
      <div class="modal-body">
        <%= render 'user_story_form' %>
      </div>
      <div class="modal-footer">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
