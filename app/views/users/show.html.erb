<div class="profile-container">
  <div class="user-container">
    <div class="left-user">
      <a href="<%= root_path %>"><input type="image" src="<%= asset_path("home-button-blue.png") %>" class="globe-home"></a>
      <%= render 'passport_form' %>
      <%= form_tag(send_user_story_path, :multipart => true) do %>
        Story
          <%= text_field_tag :story_text %>
          <%= hidden_field_tag :user_name, current_user.name ? current_user.name : 'Bound Round User' %>
          <%= hidden_field_tag :user_email, current_user.email %>
        File to Upload
          <%= file_field_tag :file1 %>
          <%= file_field_tag :file2 %>
          <%= file_field_tag :file3 %>
          <%= submit_tag 'Submit' %>
      <% end %>
    </div>
    <div class="right-user">
      <%= render 'sidebar' %>
    </div>
  </div>

</div>
<link href='http://fonts.googleapis.com/css?family=Homemade+Apple' rel='stylesheet' type='text/css'>
