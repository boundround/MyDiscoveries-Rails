<div class="container">
  <h1>My Profile</h1>
  <% unless @user.places.blank? %>
    <p>My Places</p>
    <ul>
      <% @user.places.each do |place| %>
        <div class="place-card" id="<%= place.slug %>">
          <%= raw like_icon(place) %>
          <div class="upper-card" style="background-image: url(<%= !place.photos.blank? ? place.photos.first.path_url(:small) : "http://placehold.it/350x150" %>)">
            <div class="card-category">
              <img src="http://d1w99recw67lvf.cloudfront.net/category_icons/<%= place.categories[0].identifier %>_icon.png" alt="sights icon"><%= place.categories[0].name %>
            </div>
          </div>
        <a href="<%= place_path(place) %>">
          <p class="place-title <%= place.categories[0].identifier %>"><%= place.display_name %></p><br>
        </a>
        <div class="card-footer">
          <div class="image-count">
            <img src="http://d1w99recw67lvf.cloudfront.net/category_icons/photos_count.png" height="12px" alt="photo count"><%= place.photos.length %>
          </div>
          <div class="video-count"><img src="http://d1w99recw67lvf.cloudfront.net/category_icons/videos_count.png" height="12px" alt="videos count"><%= place.videos.length %>
          </div>
          <div class="game-count">
            <img src="http://d1w99recw67lvf.cloudfront.net/category_icons/games_count.png" height="12px" alt="games count"><%= place.games.length %>
          </div>
        </div>
      </div>
      <% end %>
    </ul>
  <% end %>

  <% unless @user.photos.blank? %>
    <p>My Photos</p>
    <% @user.photos.each_with_index do |photo, index| %>
      <div class="photo-card photo-thumb my-photos">
        <%= content_tag "div", class: "photo-data", data: { photo_url: photo.path_url(:large),
                                                            photo_alt: alt_tag_for(photo),
                                                            photo_credit: photo.credit
                                                            } do %>
        <% end %>
        <img class="game-thumbnail" src="<%= photo.path_url(:small) %>" alt="<%= photo.path.path.gsub('photos/', '') %>" />
        <%= raw like_icon(photo) %>
        <div class="photo-credit">Credit: <%= photo.credit %></div>
        <div class="priority"><%= photo.priority ? photo.priority : 2 %></div>
        <div class="photo-caption">
        <p><%= raw photo.caption %></p>
        </div>
      </div>
    <% end %>
  <% end %>

  <% unless @user.videos.blank? %>
    <p>My Videos</p>
    <div class="cards-float">
      <% @user.videos.each do |video| %>
        <% if (video != nil and video.vimeo_thumbnail != nil ) %>
          <div class="card-item card-item-small card-item-hide video video-card">
            <%= content_tag "div", class: "video-data", data: {video_id: video.vimeo_id} do %><% end %>
            <div class="card-small-content">
              <div class="video-label"><%= area_place_video_link(video) %><a class="debug" href"<%= video.vimeo_thumbnail %>"> <%= video.vimeo_thumbnail.gsub(/_\d+\.jpg/,"_300.jpg") %></a></div>
              <div class="video-background-image">
                <img class="vimeo-thumb" src="<%= video.vimeo_thumbnail.gsub(/_\d+\.jpg/,"_300.jpg") %>"/>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div>
