<section class="your-stories btm15">
  <div class="container">
    <div class="row">
      <% if !@user.stories.blank? %>
        <%= @user.stories.each do |story| %>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 btm15">
            <div class="head-stories">
              <div class="left">
                <a href="<%= place_path(story.place) %>" class="black" style="position: absolute;">
                  <%= story.place %>
                </a>
              </div>
              <div class="right">
                <a href="#">
                  <i class="fa fa-image"></i>
                   <%= story.user_photos.size %>
                </a>&nbsp;&nbsp;
                <!-- <a href="#">
                  <i class="fa fa-youtube-play"></i>
                   1
                </a> -->
              </div>
          </div>
            <div class="body-stories">
              <div class="p-dynamic member-profile">
              <p class="visited"><%= story.created_at.strfime("%B %Y")%></p>
              <p class="font-orange2"><%= story.title %></p>
              <p><%= story.content[0..200] %></p>
              </div>
                <div class="img-story-place">
                  <img align="right" src="<%= story.user_photos.first rescue "" %>" alt="">
                </div>
            </div>
          </div>
        <% end %>
      <% end %>

    </div> <!-- row -->
  </div>
</section>
