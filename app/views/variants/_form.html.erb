<div class="form-group">
  <%=
    f.input :supplier_product_code,
    label: 'Supplier Product Code',
    input_html: { class: 'form-control' }
  %>
</div>
<div class="form-group">
</div>
<% if !product.disable_maturity? %>
  <div class="form-group">
    <%=
      f.input :maturity,
      label: 'Adult/Child',
      as: :select,
      collection: Spree::Variant.maturities.keys,
      include_blank: false,
      input_html: { class: 'form-control' }
    %>
  </div>
<% end %>
<% if !product.disable_bed_type? %>
  <div class="form-group">
    <%=
      f.input :bed_type,
      label: 'Bed Type',
      as: :select,
      collection: Spree::Variant.bed_types.keys,
      include_blank: false,
      input_html: { class: 'form-control' }
    %>
  </div>
<% end %>
<% if !product.disable_departure_city? %>
  <div class="form-group">
    <%=
      f.input :departure_city,
      label: 'Departure City',
      input_html: { class: 'form-control' }
    %>
  </div>
<% end %>
<% if !product.disable_departure_date? %>
  <div class="form-group">
    <%=
      f.input :departure_date,
      label: 'Departure Date',
      as: :date,
      html5: true,
      input_html: { class: 'form-control' }
    %>
  </div>
<% end %>
<% if !product.disable_package_option? %>
  <div class="form-group">
    <%=
      f.input :package_option,
      label: 'Package Option',
      input_html: { class: 'form-control' }
    %>
  </div>
<% end %>
<% if !product.disable_accommodation? %>
  <div class="form-group">
    <%=
      f.input :accommodation,
      label: 'Hotel / Accommodation',
      input_html: { class: 'form-control' }
    %>
  </div>
<% end %>

<div class="form-group">
  <%=
    f.input :price,
    label: 'Price',
    input_html: {
      class: 'form-control',
      value: number_with_precision(f.object.price.to_f, precision: 2)
    }
  %>
</div>
<div class="form-group">
  <%=
    f.input :description,
    label: 'Description',
    as: :text,
    input_html: { class: 'form-control' }
  %>
  <div class="form-group">
    <%=
      f.input :sumcode,
      label: 'Sumcode (AX Item Code without variant - ex. MSN005)',
      input_html: { class: 'form-control' }
    %>
  </div>
  <div class="form-group">
    <%=
      f.input :item_code,
      label: 'AX Item Code',
      input_html: { class: 'form-control' }
    %>
  </div>
  <% if !product.disable_room_type? %>
    <div class="form-group">
      <%=
        f.input :room_type,
        label: 'Room Type',
        input_html: { class: 'form-control' }
      %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.check_box :miscellaneous_charges, label: false %>
    <%= f.label :miscellaneous_charges, 'Miscellaneous Charges' %>
  </div>
</div>
<div class="form-group">
  <%= f.submit 'Submit', class: 'btn btn-success' %>
</div>
