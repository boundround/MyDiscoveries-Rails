<div class="col-xs-12 col-sm-6 col-md-4">

  <div class="body-stories">
  <% if !video.youtube_id.blank? %>
    <video data-video="youtube" data-id="<%= video.youtube_id %>" poster="<%= video.vimeo_thumbnail %>" class="play-in-modal thumb-video" data-modal="#video-modal" data-video-url="<%= video.url %>">
    </video>
  <% else %>
    <video data-video="vimeo" data-id="<%= video.vimeo_id %>" poster="<%= video.vimeo_thumbnail %>" class="play-in-modal thumb-video" data-modal="#video-modal" data-video-url="<%= video.url %>">
    </video>
  <% end %>
    <%= link_to '', class: 'play-video' do %>
      <i class="fa fa-play play-video"></i>
    <% end %>
  </div>

    <div class="head-stories">
    <div>
        <div class="profile-outer">
          <img src="<%= asset_path('br-logo-new-blue.png')%>" alt="">
        </div>
        <div class="title">
          <p><%= place_or_country_link(video.place) %></p>
          <h4 class="small-video-title"><%= video.title %></h4>
        </div>
    </div>
  </div>

  <div class="details-dest btm15">
    <div class="left">
      <% if video.place.present? %>
          <% video.place.subcategories.subcats.each do |sub| %>
            <%= link_to sub.name, subcategory_path(sub.identifier), class: 'badge-link' %>
          <% end %>
      <% end %>
    </div>
  </div>

</div>
<%= render 'shared/video_modal' %>